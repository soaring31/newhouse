		<script type="text/javascript">
        	var jsbase = "{{ asset('bundles') }}";
        </script>
        <script type="text/javascript" src="{{ asset('bundles/core/js/vendor/sea.main.js', absolute=true) }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/core/js/vendor/sea.map.js', absolute=true) }}"></script>
        <script type="text/javascript">
        seajs.use(["core/js/jumppage.js"],function(j){
            j.init("main");
