            {% else %}
            <img src="{{ asset('bundles/core/css/redirect/images/404/yun0.png') }}" alt="" class="yun yun0"/>
            <img src="{{ asset('bundles/core/css/redirect/images/404/yun1.png') }}" alt="" class="yun yun1" />
            <img src="{{ asset('bundles/core/css/redirect/images/404/yun2.png') }}" alt="" class="yun yun2"/>
