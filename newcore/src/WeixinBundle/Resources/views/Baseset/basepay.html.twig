{% extends bundlename~"::mainlayout.html.twig" %}
{% block tableMain %}
<form class="form" action="{{ (action)|U }}" method="post" name="form">
<table class="right-table" width="100%">
	<tbody>
	    <tr>
			<th colspan="2" class="conlist">[{{app.session.get('wxname')|default('未知')}}] 支付配置</th>
		</tr>
		<tr>
			<td class="txtright fB" width="30%">公众号APPID：</td>
			<td class="txtleft">
			    <input type="text" name="appid" class="w400" disabled value="{{ info.appid|default(app.session.get('appid')) }}" />
				<span class="tips1"></span>
			</td>
		</tr>
		<tr>
			<td class="txtright fB">公众号APPSECRET：</td>
			<td class="txtleft">
				<input type="text" name="appsecret" class="w400" disabled value="{{ info.appsecret|default(app.session.get('appsecret')) }}" />
				<span class="tips1"></span>
			</td>
		</tr>
		<tr>
			<td class="txtright fB">微信商户号：</td>
			<td class="txtleft">
				<input name="mchid" class="w400" type="text" value="{{ info.mchid|default('') }}" />
				<span class="tips1"></span>
			</td>
		</tr>
		<tr>
			<td class="txtright fB">支付秘钥：</td>
			<td class="txtleft">
				<input name="paysignkey" class="w400" type="text" value="{{ info.paysignkey|default('') }}" />
				<span class="tips1"></span>
			</td>
		</tr>
	</tbody>
</table>
<div class="submit">
	<input class="submit-btn ajax-post confirm" target-form="form" value="保存" type="submit" />
</div>
</form>
{% endblock %}
{% block submit %}{% endblock %}
{% block promptUl %}<li></li>{% endblock %}