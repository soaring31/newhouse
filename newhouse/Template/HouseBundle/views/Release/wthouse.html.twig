{% extends 'HouseBundle::base.html.twig' %}

{% set id = app.request.get("id")|default('') %}

{% set mid = app.request.get('mid')|default('') %}

{% block title %}委托出租{% endblock title %}

{% block js %}
    <script type="text/javascript">
        seajs.use([], function() {
            var $form = $('.wt-form');

            $form.on('done', function(e, res) {
                if("{{mid}}"){
                    console.log({{ mid }})

                    $.ajax({
                        url: "{{ ('mentrustarc/save')|U({_form_id: 368 }) }}",
                        type: 'POST',
                        dataType: 'json',
                        data: {
                            aid: res.id,
                            uid: "{{mid}}",
                            models: "{{ app.request.get('models')|default('') }}",
                            csrf_token: csrf_token
                        },
                    })
                    .done(function(data) {
                        if(data.status){
                            $.jqModal.tip(data.info, 'info');
                        }
                    })
                    .fail(function() {
                        console.log("error");
                    })
                    .always(function() {
                       // console.log("complete");
                    });
                    
                }
                else{

                location.href = '{{ ('release/ujjd')|U }}?id=' + res.id;
                }
            })
        })
    </script>
{% endblock %}
{% block body %}
    <div class="container">
        {{house_global.release_nav({
            action: action
        })}}
        {% block form_release %}
            {# 渲染表单 #}
            {{ render(controller('HouseBundle:Bundlebindforms:ajaxform', {
                models: app.request.get('models')|default(''),
                formflag: 'wthouse',
                formcls: 'form-fy wt-form',
                formlabel: true
            })) }}
        {% endblock form_release %}
    </div>
    <div class="blank10"></div>
{% endblock %}
