{% block mainleft %}{% endblock mainleft %}

{% block tableMain %}
{{ core_manage.filter([
    {
        method: 'show',
        title: '<i class="font-ico-plus mr5"></i>新增答案'
    },
    {
        method: 'selectFormField',
        title: '审核',
        form: 'checked',
        field: 'checked',
    },
    {
        method: 'selectFilter',
        attr: {
            'data-selectdate': {
                unix: 1
            }
        },
        data: [
            {
                id: '1M',
                name: '一个月前'
            },
            {
                id: '3M',
                name: '三个月前'
            }
        ],
        field: 'create_time',
        title: '添加时间'
    },
    {
        method: 'selectFormField',
        title: '是否最佳',
        form: 'answer',
        field: 'isanswer',
    },
    {
        method: 'search',
        field: 'content',
        title: '请搜索答案',
    }
]) }}
{# {{dump(ident.info)}} #}
<section class="list-con"  data-param="{
        defUrl    : '{{ (action)|U }}',
        showUrl   : '{{ (action ~ "/show")|U }}',
        submitUrl : '{{ (action ~ "/save")|U }}',
        deleteUrl : '{{ (action ~ "/delete")|U }}',
        fixed     : '.filter',
        list      : '.list-con',
        data      : {
            ask: '{{ ask }}',
            toid: '{{toid}}'
        }
    }">

    <div class="list">
        <table class="right-table table-hover">
            <tbody>
                <tr data-id>
                    <th width="50" class="tac">{{core_manage.checkbox()}}</th>
                    <th width="50" data-role="sort" data-sort="id" class="sort">ID</th>
                    {% if ask is null %}
                        <th>问答</th>
                    {% endif %}
                    <th width="150">会员名</th>
                    {% if toid < 1 %}
                    <th width="50">回复</th>
                    {% endif %}
                    <th width="50">是否最佳</th>
                    <th width="50">审核</th>
                    <th width="100" data-role="sort" data-sort="create_time" class="sort">添加时间</th>
                    <th width="120" class="tac">操作</th>
                </tr>
                {% if ident.info.data is defined and ident.info.pageCount|default(0) != 0 %}
                {% for k, vo in ident.info.data %}
               
                <tr data-id="{{ vo.id }}">
                    <td class="tac">{{core_manage.checkbox()}}</td>
                    <td>{{ vo.id }}</td>
                    {% if ask is null %}
                        <td class="tov">
                            {{ ('house.ask')|getOne('name', {id: vo.ask|default('')}) }}
                        </td>
                    {% endif %}
                    <td>{{ ('db.users')|getOne('username', {id: vo.uid}) }}</td>
                    {% if vo.toid == 0  %}
                    {# 判断是否独立显示评论 #}
                    {% if ask %}
                        {# 每条数据中独有的评论只需传toid即可 #}
                        {% set opt = {toid: vo.id} %}
                    {% else %}
                        {# 全部评论显示的列表还需要把所属数据的id，即aid传过去 #}
                        {% set opt = {toid: vo.id, ask: vo.ask} %}
                    {% endif %}
                    <td>
                        <a data-role="show" title="回复" href="{{('manswer/manswermanage')|U(opt)}}">
                            [{{core_global.count({models: 'answer', sql_opt: {
                                models: 'news',
                                toid: vo.id|default(''),
                                ask: vo.ask|default('')
                            } })}}]
                        </a>
                    </td>
                    {% else %}
                    {% if toid is empty %}
                    {# 已经属于回复的数据禁止重复回复 #}
                    <td>
                        -
                    </td>
                    {% endif %}
                    {% endif %}
                    <td>{{ core_global.formField({value: vo.isanswer, form: 'answer', field:'isanswer'}) }}</td>
                    <td>{{ core_global.formField({value: vo.checked}) }} </td>
                    <td>{{ vo.create_time|default('0')|date('Y-m-d') }}</td>
                    <td class="tar pr10">
                        {{ core_manage.show({
                            url: (action ~ "/show")|U({id: vo.id})
                        }) }}
                        {{ core_manage.delete() }}
                    </td>
                </tr>
                {% endfor %}
                {% else %}
                <tr><td colspan="10" class="tac">没有数据！</td></tr>
                {% endif %}
            </tbody>
        </table>
    </div>
    {{core_manage.page(ident.info)}}
</section>
{{ core_manage.oprate([
    {
        method: 'delete',
        title: ' <i class="font-ico-del mr5"></i>批量删除',
    },
    {
        method: 'dropdownFormField',
        field: 'checked',
        form: 'checked',
        title: '审核',
    }
]) }}
