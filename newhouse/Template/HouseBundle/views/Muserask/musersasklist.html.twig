{% block tableMain %}
{{ core_manage.filter([
    {
        method: 'search',
        field: 'name',
    }
]) }}
<section class="list-con" data-param="{
        defUrl    : '{{ (action)|U }}',
        showUrl   : '{{ (action ~ '/show')|U }}',
        submitUrl : '{{ (action ~ '/save')|U }}',
        deleteUrl : '{{ ( 'maskmanage/delete')|U }}',
        fixed     : '.filter',
        list      : '.list-con',
        data      : {
            models: '{{ models }}',
            category: '{{ category }}'
        }
    }">
    <div class="list">
        <table class="right-table table-hover">
            <tbody>
                <tr data-id>
                    <th width="40" class="tac">{{core_manage.checkbox()}}</th>
                    <th>问答名称</th>
                    <th width="100">审核</th>
                    {# <th width="100">悬赏分</th> #}
                    <th class="100">答案</th>
                    <th width="100">状态</th>
                    <th width="100">点击</th>
                    <th width="100" data-role="sort" data-sort="create_time" class="sort">添加时间</th>
                </tr>
                {% if ident.info.data is defined and ident.info.pageCount|default('') != 0 %}
                {% for k, vo in ident.info.data %}
                    {# {{dump(vo)}} #}
                <tr data-id="{{ vo.id }}">
                    <td class="tac">{{core_manage.checkbox()}}</td>

                    <td class="tov" title="{{ vo.name|default('') }}"><a href="{{ 'ask/detail'|U({id: vo.id}) }}" target="_blank">{% if vo.thumb %}<i class="font-ico-tp mr5 fcr"></i>{% endif %}{{ vo.name }}</a></td> 
                    <td>{{ core_global.formField({value: vo.checked}) }} </td>
                    <td><a data-role="show" title="{{vo.name}}的答案" href="{{('manswer/manswermanage')|U({ask: vo.id})}}">[{{core_global.count({ models: 'answer', sql_opt: {ask: vo.id} })}}]</a></td>
                    <td>{{ core_global.formField({value: vo.solved, form: 'ask', field:'solved'}) }} </td>
                    <td>{{ vo.clicks }}</td>
                    <td>{{ vo.create_time|default('0')|date('Y-m-d') }}</td>
                </tr>
                {% endfor %}
                {% else %}
                <tr><td colspan="10" class="tac">没有数据！</td></tr>
                {% endif %}
            </tbody>
        </table>
    </div>
    {{core_manage.page(ident.info)}}
</section>

{{ core_manage.oprate([
