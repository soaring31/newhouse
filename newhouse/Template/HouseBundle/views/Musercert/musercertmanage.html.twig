{% block tableMain %}
{{ core_manage.filter([
    
    {
        method: 'selectFormField',
        title: '审核',
        form: 'checked',
        field: 'checked',
    },
    {
        method: 'selectCate',
        title: '认证类型',
        field: 'userauth',
        service: 'house.user_auth',
        
    }
]) }}
<section class="list-con" data-param="{
        defUrl    : '{{ (action)|U }}',
        showUrl   : '{{ (action ~ '/show')|U }}',
        submitUrl : '{{ (action ~ '/save')|U }}',
        deleteUrl : '{{ (action ~ '/delete')|U }}',
        fixed     : '.filter',
        list      : '.list-con',
        data      : {
            models: '{{ models }}',
            category: '{{ category }}',
            _is_appointed: 1

        }
    }"> 
    <div class="list">
        <table class="right-table table-hover">
            <tbody>
                <tr data-id>
                    <th width="40" class="tac">{{core_manage.checkbox()}}</th>
                    <th width="40" data-role="sort" data-sort="id" class="sort">ID</th>
                    <th>认证会员</th>
                    <th width="100">认证类型</th>
                    <th width="100">会员类型</th>
                    <th width="100"width="40" data-role="sort" data-sort="create_time" class="sort">申请时间</th>
                    <th width="80">审核</th>
                    <th width="120" class="tac">操作</th>
                </tr>
                {% if ident.info.data is defined and ident.info.pageCount|default('') != 0 %}
                {% for k, vo in ident.info.data %}
                    {# {{dump(vo)}} #}
                <tr data-id="{{ vo.id }}">
                    <td class="tac">{{core_manage.checkbox()}}</td>
                    <td>{{ vo.id }}</td>
                    <td>{{ ('db.users')|getOne('username', {id: vo.uid}) }}</td>
                    <td>{{ ('house.user_auth')|getOne('name', {id: vo.userauth}) }}</td>
                    <td>{{  ('db.mem_group')|getOne('name', {id: vo.groupid}) }}</td>
                    <td> {{ vo.create_time|default('0')|date('Y-m-d') }} </td>
                    <td>{{ core_global.formField({value: vo.checked}) }} </td>
                    <td class="tac">
                        {% set form_id = ('house.user_auth')|getOne('form', {id: vo.userauth}) %}
                        {{ core_manage.show(
                            {
                             url: ('musercertmanage/show')|U({_form_id: form_id}),
                             title: '修改',
                             class: 'btn',
                             attr: ''
                        }
                        ) }}
                        {{ core_manage.delete() }}
                    </td>
                </tr>
                {% endfor %}
                {% else %}
                <tr><td colspan="8" class="tac">没有数据！</td></tr>
                {% endif %}
            </tbody>
        </table>
    </div>
    {{core_manage.page(ident.info)}}
</section>

