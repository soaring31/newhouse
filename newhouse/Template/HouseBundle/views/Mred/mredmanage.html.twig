{% extends 'HouseBundle::base_manage_block.html.twig' %}
{% set cate_pushs = app.request.get('cate_pushs', 'hongbao') %}
{% set form = app.request.get('form', 'houses_red') %}

{# 获取当前时间 #}
{% set ctime = ('now')|date('Y-m-d') %}

{% block js %}
<script type="text/javascript">

</script>
{% endblock %}

{% block mainMenu %}
    {{ parent() }}
{% endblock %}

{% block mainleft %}
{% endblock mainleft %}

{% block tableMain %}
{{ core_manage.filter([
    {
        method: 'show',
        title: '<i class="font-ico-plus mr5"></i>新增红包',
    },
    {
        title: '添加时间',
        attr: {
            'data-selectdate': {
                unix: 1
            }
        },
        data: [
            {
                id: '1M',
                name: '一个月前'
            },
            {
                id: '3M',
                name: '三个月前'
            }
        ],
        field: 'create_time',
        method: 'selectFilter'
    },
    {
        method: 'selectFilter',
        title: '有效期',
        field: 'limit_time',
        data: [
            {
                id: 'gt|' ~ ctime|default(''),
                name: '有效'
            },
            {
                id: 'lt|' ~ ctime|default(''),
                name: '失效'
            }
        ]
    },
    {
        method: 'selectFormField',
        title: '审核',
        form: 'checked',
        field: 'checked',
    },
    {
        method: 'search',
        field: 'name',
        title: '请搜索名称/价格/楼盘'
    }
]) }}
<section class="list-con" data-param="{
        defUrl    : '{{ (action)|U }}',
        showUrl   : '{{ (action ~ '/show')|U }}',
        submitUrl : '{{ (action ~ '/save')|U }}',
        deleteUrl : '{{ (action ~ '/delete')|U }}',
        fixed     : '.filter',
        list      : '.list-con',
        data      : {
            cate_pushs: '{{ cate_pushs }}',
            form: '{{form}}'
        }
    }">
    <div class="list">
        <table class="right-table table-hover">
            <tbody>
                <tr data-id>
                    <th width="40" class="tac">{{core_manage.checkbox()}}</th>
                    <th width="40" data-role="sort" data-sort="id" class="sort">ID</th>
                    <th>名称</th>
                    <th width="250">所属楼盘</th>
                    <th width="250">说明</th>
                    <th width="80" data-role="sort" data-sort="price" class="sort">价格</th>
                    <th width="100" data-role="sort" data-sort="limit_time" class="sort">有效期</th>
                    <th width="50">报名</th>
                    <th width="50">审核</th>
                    <th width="100" data-role="sort" data-sort="create_time" class="sort">添加时间</th>
                    <th width="120" class="tac">操作</th>
                </tr>
                {% if ident.info.data is defined and ident.info.pageCount|default('') != 0 %}
                {% for k, vo in ident.info.data %}
                    <tr data-id="{{ vo.id }}">
                        <td class="tac">{{core_manage.checkbox()}}</td>
                        <td>{{ vo.id }}</td>
                        <td class="tov" title="{{ vo.name|default('') }}">
                            <a href="{{ 'hongbao/detail'|U({id: vo.id}) }}" target="_blank">{% if vo.thumb|default('') %}<i class="font-ico-tp mr5 fcr"></i>{% endif %}{{ vo.name|default('') }}</a>
                        </td>
                        <td>
                            <a href="{{('houses/detail')|U({id: vo.aid})}}" target="_blank">
                                {{ vo.lpmc|default('-') }}
                            </a>
                        </td>
                        <td>{{ vo.content|default('')|raw }}</td>
                        <td> {{ vo.price }}</td>
                        <td> {{ vo.limit_time|default('0')|date('Y-m-d') }}</td>
                        <td><a title="{{ vo.name }}的报名" data-role="show" href="{{ (controller ~ '/mredenroll')|U({type: 'red', aid:  vo.id}) }}">[{{vo.hdnum|default(0)}}]</a></td>
                        <td>{{ core_global.formField({value: vo.checked}) }}</td>
                        <td>{{ vo.create_time|default('0')|date('Y-m-d') }}</td>
                        <td class="tar pr10">
                            {{ core_manage.show({url: (action ~ "/show")|U({id: vo.id}) }) }}
                            {{ core_manage.delete() }}
                        </td>
                    </tr>
                {% endfor %}
                {% else %}
                <tr><td colspan="11" class="tac">没有数据！</td></tr>
                {% endif %}
            </tbody>
        </table>
    </div>
    {{core_manage.page(ident.info)}}
</section>

{{ core_manage.oprate([
    {
        method: 'delete',
        title: ' <i class="font-ico-del mr5"></i>批量删除',
    },
    {
        method: 'dropdownFormField',
        field: 'checked',
        form: 'checked',
        title: '审核',
    }
]) }}
{% endblock %}

{% block promptUl %}
提示：新增红包的时候必须从所属楼盘中关联到搜索的楼盘，否则会提示楼盘id必须填写
{% endblock %}
