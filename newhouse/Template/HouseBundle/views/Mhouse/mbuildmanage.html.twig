{# 楼栋 #}
{% extends 'HouseBundle:Mhouse:mhousesarc.html.twig' %}

{% block mainleft %} 
{% endblock mainleft %} 

{% block tableMain %} 
    {{ core_manage.filter([
        {
            method: 'selectCate',
            title: '状态',
            field: 'cate_status',
            service: 'house.category',
        },
        {
            method: 'selectCate',
            title: '装修',
            field: 'zxcd',
            service: 'house.category',
        },
        {
            method: 'search',
            field: 'name',
            title: '请搜索楼栋名称',
        }
    ]) }}
    <div class="list-con" data-param="{{ params }}">
        <div class="list">
            <table class="right-table table-hover">
                <tbody>
                    <tr data-id>
                        <th width="40" class="tac">{{core_manage.checkbox()}}</th>
                        <th width="40" data-role="sort" data-sort="id" class="sort">ID</th>
                        <th>名称</th>
                        <th width="100"data-role="sort" data-sort="name" class="sort">单元</th>
                        <th width="100"data-role="sort" data-sort="floor" class="sort">层数</th>
                        <th width="100"data-role="sort" data-sort="hushu" class="sort">户数</th>
                        <th width="100" data-role="sort" data-sort="create_time" class="sort">添加时间</th>
                        <th width="120" class="tac">操作</th>
                    </tr>
                    {% if ident.info.data|length %}
                    {% for k, vo in ident.info.data %}

                    <tr data-id="{{ vo.id }}">
                        <td class="tac">{{core_manage.checkbox()}}</td>
                        <td>{{ vo.id }}</td>
                        <td class="tov" title="{{ vo.name|default('') }}"><span data-role="itemEdit" data-name="name" class="edit">{{ vo.name }}</span></td> 
                        <td>{{ vo.unit }}</td>
                        <td>{{ vo.floor }}</td>
                        <td>{{ vo.hushu }}</td>
                        <td>{{ vo.create_time|default('0')|date('Y-m-d') }}</td>
                        <td class="tar pr10">
                            {{ core_manage.show({url: (action ~ "/show")|U({id: vo.id}) }) }}
                            {{ core_manage.delete() }}
                        </td>
                    </tr>
                    {% endfor %}
                    {% else %}
                    <tr><td colspan="8" class="tac">没有数据！</td></tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
         {{core_manage.page(ident.info)}}
  </div>

    {{ core_manage.oprate([
        {
            method: 'delete',
            title: '<i class="font-ico-del mr5"></i>批量删除',
        },
        {
            method: 'dropdownCate',
            title: '状态',
            field: 'cate_status',
            service: 'house.category',
        }
    ]) }}
{% endblock %}


