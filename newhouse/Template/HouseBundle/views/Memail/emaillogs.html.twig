<section class="list-con" data-param="{
    defUrl    : '{{ (action)|U }}',
    showUrl   : '{{ (action ~ '/show')|U }}',
    submitUrl : '{{ (action ~ '/save')|U }}',
    deleteUrl : '{{ (action ~ '/delete')|U }}',
    fixed     : '.filter',
    list      : '.list-con',
    data      : {
    }
}">
    <div class="list">
        <table class="right-table table-hover">
            <tbody>
                <tr data-id>
                    <th width="50" class="tac">{{core_manage.checkbox()}}</th>
                    <th width="50" data-role="sort" data-sort="id" class="sort">序号</th>
                    <th width="250">收件人邮箱</th>
                    <th>邮件内容</th>
                    <th width="200">模版名称</th>
                    <th width="100" data-role="sort" data-sort="create_time" class="sort">发送时间</th>
                    <th width="120" class="tac">操作</th>
                </tr>
                {% if ident.info.data is defined and ident.info.data|default('') %}
                {% for k, vo in ident.info.data %}
                <tr data-id="{{ vo.id }}">
                    <td class="tac">{{core_manage.checkbox()}}</td>
                    <td>{{ vo.id|default('') }}</td>
                    <td>
                        {% for item in vo.name|default('')|split(',') %}
                            {{item|default('')}}<br/>
                        {% endfor %}
                    </td>
                    <td>[<a href="{{'msglog/preview'|U({id: vo.id})}}" data-role="show">预览</a>]</td>
                    <td>
                    {% set data = vo.content|json_decode() %}
                        {{data.tpl|default('')}}
                    </td>
                    <td>{{ vo.create_time|default('')|date('Y-m-d') }}</td>
                    <td class="tac">
                        {{ core_manage.delete() }}
                    </td>
                </tr>
                {% endfor %}
                {% else %}
                <tr><td colspan="10" class="tac">没有数据！</td></tr>
                {% endif %}
            </tbody>
        </table>
    </div>
    {{core_manage.page(ident.info)}}
</section>

