{% extends 'HouseBundle::base_manage_block.html.twig' %}
{% set aid = app.request.get('aid')|default('') %}
{% set type = app.request.get('type')|default(null) %}
{% set name = app.request.get('name')|default('') %}
{% block js %}
<script type="text/javascript">
    
</script>
{% endblock %}

{% block mainMenu %}
    {# {{ parent() }}  #}
     {{ core_manage.jump({
        url: (action)|U({ type: 1 }), 
