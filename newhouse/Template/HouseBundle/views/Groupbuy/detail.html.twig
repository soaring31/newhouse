{# {% extends 'HouseBundle:Groupbuy:list.html.twig' %} #}
{# # 说明
* detail: 详情数据
* detail_houses: 所属楼盘信息
* detail_houses_attr: 所属楼盘属性
* sort_hdnum_groupbuy: 报名人数排行
* tpl_groupbuy: 判断是否已经结束团购
#}
{% set detail = cident.detail.data[0]|default('') %}

{% extends detail ? 'HouseBundle:Groupbuy:list.html.twig' : 'CoreBundle:Dispatch:errorcontent.html.twig' %}

{% set detail_houses = ('house.houses')|getRow({id: detail.aid|default(''), checked: 1, findType: 1}) %}

{% set detail_houses_attr = detail_houses.attributes|default('') %}

{% block title %}{{cur_area_data|default('')}}{{'_' ~ detail_houses.name|default('') ~ '_'}}{{detail.name|default('')}}团购{% endblock title %}

{% set sort_hdnum_groupbuy = ('house.groupbuy')|getAll({checked: 1, pageSize: 10, order: 'hdnum', orderBy: 'desc', id: 'neq|' ~ detail.id|default(0)}) %}

{% set sort_clisks_houses = ('house.houses')|getAll({checked: 1, pageSize: 10, order: 'clicks', orderBy: 'desc'}) %}

{% set tpl_groupbuy = detail.enddate.date|default(0)|date('U') > 'now'|date('U') ? 1 : 0 %}

{% block key_des %}
<meta name="keywords" content="{{cur_area_data|default('')}}{{detail.name|default('')}}团购,{{cur_area_data|default('')}}{{core_global.mconfig({name: 'hostname', ename: 'mwebset'})}}提供{{detail.name|default('')}}团购,{{cur_area_data|default('')}}{{core_global.mconfig({name: 'hostname', ename: 'mwebset'})}}提供{{detail_houses.name|default('')}}楼盘团购">
<meta name="description" content="{{cur_area_data|default('')}}{{detail.name|default('')}}团购,{{cur_area_data|default('')}}{{core_global.mconfig({name: 'hostname', ename: 'mwebset'})}}提供{{detail.name|default('')}}团购,{{cur_area_data|default('')}}{{core_global.mconfig({name: 'hostname', ename: 'mwebset'})}}提供{{detail_houses.name|default('')}}楼盘团购">
{% endblock key_des %}

{% block current_houses %}
    {{parent()}}
    <span>&gt;</span>
    <span>{{detail.name|default('')}}</span>
{% endblock current_houses %}

{% block tg_body %}
    <ul class="lp-list">
        {{house_global.groupbuy_list({
            list: {
                data: {
                    0: detail
                },
                pageCount: 1
            },
            tpl_detail: 0
        })}}
    </ul>
    <!--panel-->
    <div class="detail-panel bd-gray">
        <!--title-->
        <div class="panel-hd">
            <h3>活动说明</h3>
        </div>
        <!--/title-->
        <!--body-->
        <div class="panel-bd">
            <div class="hdsm">
                {{core_global.content({content: detail.content|default(''), default: '暂无更多活动说明'})}}
            </div>
        </div>
        <!--/body--> </div>
    <!--/panel-->
    <div class="blank30"></div>
    <!--panel-->
    <div class="detail-panel bd-gray">
        <!--title-->
        <div class="panel-hd">
            <h3>
                项目详情>>
                <span class="normal ml10">{{detail_houses.name|default('')}}</span>
            </h3>
        </div>
        <!--/title-->
        <!--body-->
        <div class="panel-bd">
            <div class="xmxq jqDuang" data-obj=".item" data-cell=".tab-hd ul" data-autoplay="0">
                <div class="tab-hd clearfix">
                    <ul>
                        <li class="act">项目介绍</li>
                        <li>交通配套</li>
                        <li>楼层状况</li>
                        <li>车位信息</li>
                        <li>相关信息</li>
                    </ul>
                </div>
                <div class="tab-bd clearfix">
                    <div class="item" style="display:block;">
                        {{detail_houses.content|default('')|raw}}
                    </div>
                    <div class="item">
                        {{detail_houses_attr.jtxl.value|default('')}}
                    </div>
                    <div class="item">
                        {{- house_global.lptag({value: houses|default(''), con: 'lcs'}) -}}
                    </div>
                    <div class="item">
                        {{detail_houses_attr.cksm.value|default('')}}
                    </div>
                    <div class="item">
                        <p>
                        <strong>建筑面积:</strong>&nbsp; {{house_global.if_mj({value: detail_houses_attr.jzmj.value|default(''), tpl: '%value%%danwei%'})}}
                        </p>
                        <p>
                        <strong>占地面积:</strong>&nbsp; {{house_global.if_mj({value: detail_houses_attr.zdmj.value|default(''), tpl: '%value%%danwei%'})}}
                        </p>
                        <p>
                        <strong>得 房 率:</strong>&nbsp;{{detail_houses_attr.dfl.value|default('')}}
                        </p>
                        <p>
                        <strong>绿 化 率:</strong>&nbsp;{{detail_houses_attr.lhl.value|default('')}}
                        </p>
                        <p>
                        <strong>容 积 率:</strong>&nbsp;{{detail_houses_attr.rjl.value|default('')}}
                        </p>
                        <p>
                        <strong>许可证号:</strong>&nbsp;{{detail_houses.xkzh|default('')}}
                        </p>
                        <p>
                        <strong>物业公司:</strong>&nbsp;{{detail_houses.wygs|default('')}}
                        </p>
                        <p>
                        <strong>物业地址:</strong>&nbsp;{{detail_houses.sldz|default('')}}
                        </p>
                        <p>
                        <strong>物 业 费:</strong>&nbsp;{{detail_houses.wyf|default('')}}
                        </p>
                        <p>
                        <strong>开盘日期:</strong>&nbsp;{{detail_houses.kpdate.date|default('')|date('Y-m-d')}}
                        </p>
                        <p>
                        <strong>交房日期:</strong>&nbsp;{{detail_houses_attr.jfrq.value|default('')}}
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <!--/body--> </div>
    <!--/panel-->
    <div class="blank30"></div>
    <!--panel-->
    <div class="detail-panel bd-gray">
        <!--title-->
        <div class="panel-hd">
            <h3>
                <a href="{{('houses/dprices')|U({id: detail_houses.id|default('')})}}" target="_blank" class="mr20 normal fr">>更多历史价格</a>
                房价走势>>
                <span class="normal ml10">{{detail_houses.name|default('')}}</span>
            </h3>
        </div>
        <!--/title-->
        <!--body-->
        <div class="panel-bd chart-wrap">
            <!--走势图-->
            {{house_global.prices_info({
                aid: detail.aid|default(0),
                chart: 1,
                name: detail_houses.name|default('')
            })}}
            <!--/走势图-->
        </div>
        <!--/body--> </div>
    <!--/panel-->
    {% endblock tg_body %}

    {% block tg_aside %}
        {# {{dump(detail)}} #}
    {% if tpl_groupbuy|default('') %}
        <div class="bd-gray pl10 pr10">
            <h3>&lt;&lt;当前团购报名</h3>
            {{house_global.modal_layout({
                attr: 'data-tag="lpyxfm"',
                type: 'load',
                ajax: "
                    ajax: {
                        data : {
                            formflag: 'view_group_order',
                            aid: '" ~ detail.id|default(0) ~ "',
                            type: 'group',
                            formvalidstyle: 'single',
                            formcls: 'common-form-control',
                        }
                    }"
            })}}
            <div class="blank10"></div>
        </div>
        <div class="blank30"></div>
    {% endif %}
    <!--月排行-->
    {% if sort_hdnum_groupbuy.data is defined %}
    <div class="tg-ph">
        <h3>本月团购排行</h3>
        <dl class="bd-gray">
            <dt>
                <div class="name">楼盘名称</div>
                <div class="add">价格</div>
                <div class="num">团购(人)</div>
                <div class="link mtop0">团购</div>
            </dt>
            {% for item in sort_hdnum_groupbuy.data %}
                <dd>
                    <div class="name">
                        <a href="{{('houses/detail')|U({id: item.aid|default('')})}}" target="_blank">
                            {{item.lpmc|default('-')}}
                        </a>
                    </div>
                    <div class="add">
                        {{house_global.if_dj({value: item.tgj|default('')})}}
                    </div>
                    <div class="num">{{item.hdnum|default('')}}</div>
                    <div class="link mtop0">
                        <a href="{{('groupbuy/detail')|U({id:item.id|default('')})}}" target="_blank">参团</a>
                    </div>
                </dd>
            {% endfor %}
        </dl>
    </div>
    {% endif %}
    <!--/月排行-->
    <!--热门楼盘-->
    {% if sort_clisks_houses.data is defined %}
    <div class="tg-rmlp">
        <h3>
            热门楼盘
        </h3>
        <ul class="bd-gray">
            {% for item in sort_clisks_houses.data %}
                <li class="{% if loop.index == 1 %}hover{% endif %}">
                    <i>{{loop.index}}</i>
                    <a href="{{('houses/detail')|U({id: item.id|default('')})}}" target="_blank" class="pic">
                        {{- core_global.img({
                            src: item.thumb|default(''),
                            alt: item.name|default(''),
                            type: 2,
                            width: 75,
                            height: 56
                        }) -}}
                    </a>
                    <h4>
                        <a href="{{('houses/detail')|U({id: item.id|default('')})}}" target="_blank">
                            {{item.name|default('')}}
                        </a>
                    </h4>
                    <p class="fs-12">
                        电话：{{item.tel|default('更新中...')}}
                    </p>
                    <p class="arial fs-12">
                         均价：{{ house_global.if_dj({value: item.dj|default(''), tpl: '%value%%danwei%'}) }}
                    </p>
                </li>
            {% endfor %}
        </ul>
    </div>
    {% endif %}
    <!--/热门楼盘-->
{% endblock tg_aside %}

{% block js %}

<script type="text/javascript">
seajs.use(['jqduang'], function (jqduang) {
    //热门楼盘
    $('.tg-rmlp').on('mouseover','li', function () {
        $(this).addClass('hover').siblings().removeClass('hover');
    });
})
</script>
{% endblock js %}
