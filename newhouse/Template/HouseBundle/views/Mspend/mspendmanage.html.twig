{% block tableMain %}
{{ core_manage.filter([
    {
        title: '添加时间',
        attr: {
            'data-selectdate': {
                unix: 1
            }
        },
        data: [
                {
                    id: '1M',
                    name: '一个月前'
                },
                {
                    id: '3M',
                    name: '三个月前'
                }
            ],
        field: 'create_time',
        method: 'selectFilter'
    },
    {
        method: 'search',
        field: 'name',
        title:'请搜索标题'
    }
]) }}
<section class="list-con" data-param="{
        defUrl    : '{{ (action)|U }}',
        showUrl   : '{{ (action ~ '/show')|U }}',
        submitUrl : '{{ (action ~ '/save')|U }}',
        deleteUrl : '{{ (action ~ '/delete')|U }}',
        fixed     : '.filter',
        list      : '.list-con',
        data      : {
            models: '{{ models }}',
            category: '{{ category }}'
        }
    }">
   <div class="list">
        <table class="right-table table-hover">
            <tbody>
                <tr data-id>
                    <th width="40" class="tac">{{core_manage.checkbox()}}</th>
                    <th width="40" data-role="sort" data-sort="id" class="sort">ID</th>
                    <th>标题</th>
                    <th>类型</th>
                    <th width="100" data-role="sort" data-sort="price" class="sort">总金额</th>
                    <th width="100" data-role="sort" data-sort="price" class="sort">余额</th>
                    <th width="100" data-role="sort" data-sort="create_time" class="sort">添加时间</th>
                </tr>
                {% if ident.info.data is defined %}
                {% for k, vo in ident.info.data %}
                    {# {{dump(vo)}} #}
                <tr data-id="{{ vo.id }}">
                    <td class="tac">{{core_manage.checkbox()}}</td>
                    <td>{{ vo.id }}</td>
                    <td>{{ vo.name }}</td> 
                    <td>
                      
                    {{ core_global.formField({value: vo.consume, form: 'toporder', field: 'consume' }) }}
                        
                    </td>
                    <td>{{ vo.cmoney }}</td>
                    <td>{{ vo.bmoney }}</td>
                    <td>{{ vo.create_time|default('0')|date('Y-m-d') }}</td>
                   
                </tr>
                {% endfor %}
                {% else %}
                <tr><td colspan="9" class="tac">没有数据！</td></tr>
                {% endif %}
            </tbody>
        </table>
    </div>
    {{core_manage.page(ident.info)}}
</section>

