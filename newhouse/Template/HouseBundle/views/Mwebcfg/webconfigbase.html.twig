{% extends 'HouseBundle::base_manage_block.html.twig' %}

{% block js %}

{% endblock %}

{% block mainMenu %}
    {{ parent() }} 
{% endblock %}

{% block tableMain %}
<section class="list-con table-inline" data-height="580" data-param='{
    fixed     : ".filter",
    list      : ".list-con",
    data      : {
    }
}'>
    <div class="list">
		<form class="form" action="{{ (action)|U }}" method="post" name="form">
			<table class="popup-form-table" width="100%">
				<tbody>
				    <tr>
						<th colspan="2">站点参数</th>
					</tr>
					<tr>
						<td>
							<div id="group_dysjset">
	                            <div class="form-row">
	                                <div class="form-cell-label">
	                                    <label class="w150 rtd txtright required" for="enable">是否多库：</label>
	                                </div>
	                                <div class="form-errors"></div>
	                                <div class="form-cell">
	                                	<input type="hidden" data-switch-value="1" id="multidb" name="multidb" value="{{('multidb')|C|default(0)}}"/>
									    <input type="checkbox" {% if ('multidb')|C %}checked{% endif %} data-switchcom="1" data-switch="#multidb"/>
									    <script type="text/javascript">
									        seajs.use(['switch'], function() {
									            $('input[data-switchcom="1"]')
									                .bootstrapSwitch($.extend(true, {
									                    size: 'small',
									                    onText: '是',
									                    offText: '否',
									                    onSwitchChange: function(el, v) {
									                        var $this = $(this);
									                        $($this.data('switch')).val($this.prop('checked') * 1);
									                    }
									                }, {{attr['data-switch-opt']|default('null')|raw}}));
									        })
									    </script>
	                                    {# <label>
											<input class="radio" name="multidb" value="1" {{ ('multidb')|C|isChecked(1) }} type="radio" />是
										</label>
										<label>
											<input class="radio" name="multidb" value="0" {{ ('multidb')|C|isChecked(0) }} type="radio" />否
										</label> #}
										<span class="tips1"></span>
	                                </div>
	                            </div>
	                        </div>
                        </td>
					</tr>
					<tr>
						<td>
							<div id="group_dysjset">
	                            <div class="form-row">
	                                <div class="form-cell-label">
	                                    <label class="w150 rtd txtright required" for="enable">开启多人登陆：</label>
	                                </div>
	                                <div class="form-errors"></div>
	                                <div class="form-cell">
	                                	<input type="hidden" data-switch-value="1" id="multip" name="multip" value="{{('multip')|C|default(0)}}"/>
									    <input type="checkbox" {% if ('multip')|C %}checked{% endif %} data-switchcom="1" data-switch="#multip"/>
	                                    {# <label>
											<input class="radio" name="multip" value="1" {{ ('multip')|C|isChecked(1) }} type="radio" />是
										</label>
										<label>
											<input class="radio" name="multip" value="0" {{ ('multip')|C|isChecked(0) }} type="radio" />否
										</label> #}
										<span class="tip">开启后同一帐号能多人同时使用</span>
	                                </div>
	                            </div>
	                        </div>
                        </td>
					</tr>
					<tr>
						<td>
							<div id="group_dysjset">
	                            <div class="form-row">
	                                <div class="form-cell-label">
	                                    <label class="w150 rtd txtright required" for="enable">主域名：</label>
	                                </div>
	                                <div class="form-errors"></div>
	                                <div class="form-cell">
	                                    <input name="maindomain" value="{{ 'maindomain'|C }}" class="w200" type="text" />
									    <span class="tip">比如:www.baidu.com或者www.baidu.com.cn</span>
	                                </div>
	                            </div>
	                        </div>
                        </td>
					</tr>
				</tbody>
			</table>
			{# <div class="submit">
				<input class="submit-btn ajax-post confirm" target-form="form" value="保存" type="submit">
			</div> #}
			<div class="tac">
                <div>
                    <button type="submit" id="submit" name="submit" data-role="submit" class="btn font-ico-22 fz12 mt20">提交</button>
                </div>
            </div>
		</form>
	</div>
</section>
{% endblock %}

