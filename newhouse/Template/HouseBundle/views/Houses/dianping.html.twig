        </div>
        <div class="dianping_btn"><a class="pc_new_dianping_b" href="javascritp:;">已展示全部点评数据</a></div>

    {% endif %}


    {#全网点评查看来源#}
    <div id="source" class="broker-mask-layer" style="z-index:999999;">
        <div class="feedback-main-mask">
            <span>×</span>
            <div class="header">
                来源渠道：<span class="channel"></span>
            </div>
            <div class="content">
                <textarea class="content_url" id="content_url"></textarea>
                <span class="copy_url">点击复制链接</span>
            </div>

        </div>
    </div>
    <script>
        seajs.use([], function () {
            sources($('.viewSource'));
            function sources(sourceId) {
                sourceId.each(function (index, value) {
                    $(value).off('click').on('click', function () {
                        $("body").addClass("fix");
                        $("#source").show();
                        var channel = $(value).attr('channel');
                        var source_url = $(value).attr('data');
                        $(".header .channel").html(channel);
                        $(".content .content_url").html(source_url);
                        $(".copy_url").off("click").on("click", function () {
                            var Url = document.getElementById("content_url");
                            Url.select(); // 选择对象
                            document.execCommand("Copy"); // 执行浏览器复制命令
                        });
                    });
                });
                $(".feedback-main-mask").on('click', 'span', function () {
                    $("body").removeClass("fix");
                    $("#source").hide();
                });
                $(document).on("click", function (e) {
                    if (!$(e.target).is($(".feedback-main-mask")) && $(e.target).is($(".broker-mask-layer"))) {
                        $("body").removeClass("fix");
                        $("#source").hide();
                    }
                });
            }
        });
    </script>

{% endblock d_body %}


