{# <script type="text/javascript" src="{{ asset('static/' ~ bundlepath ~ '/js/lpdt.js', absolute=true) }}"></script> #}
<script type="text/javascript" >
seajs.use([],function(){
$(function(){
     var i = 10;
     $('.dynamic-list').hide()
     $('.dynamic-list:lt(10)').addClass('listshow');
     $('.more_dynamic').on('click',function(){
         $('.dynamic-list:lt('+ i +')').removeClass('listshow').addClass('listshow');
           i+=10;
        var len  = $('.dynamic-list').length;
         var showEle = $('.dynamic-list').filter('.listshow');
         var showLen = showEle.length;

         if(showLen > len-10){
            $('.more_dynamic').hide();
         }
     })

})
});
</script>
{% endblock js_base %}