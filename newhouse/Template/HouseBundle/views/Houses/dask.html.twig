{% extends 'HouseBundle:Houses:ddetail.html.twig' %}
{# # 说明:
** block_wenda: 获取问答的列表
#}

{% block title_houses %}问答_{{detail.name|default('')}}相关问答{% endblock title_houses %}

{% block key_des %}
<meta name="keywords" content="{{detail.name|default('')}}问答, {{detail.name|default('')}}问题, {{cur_area_data|default('')}}{{detail.name|default('')}}家居问题, {{cur_area_data|default('')}}{{detail.name|default('')}}装修问题,{{detail.name|default('')}}问答" />
<meta name="description" content="{{detail.name|default('')}}相关问答，{{detail.name|default('')}}装修，{{cur_area_data|default('')}}{{detail.name|default('')}}专业问题解答。这里有专业的房产经纪人设计人员为您解答{{detail.name|default('')}}相关的房产,家居,装修的问题。无数网友在这里交流{{cur_area_data|default('')}}{{detail.name|default('')}}的问题，互帮互助。"/>
{% endblock key_des %}

{# 导航高亮 #}
{% block nav_houses %}
{% set nav_houses_act = 9 %}
{{parent()}}
{% endblock nav_houses %}

{% block d_body %}
    {% set block_wenda = ('house.houses_arc')|getBlock({ename: 'wenda'}, {pageSize: 12,pageIndex: pageindex, checked: 1, aid: detail.id|default(''), findType: 1, _multi: 1}) %}
    <!--问答-->
    <div class="d-news">
        <div class="lp-coltit">
            <h3 class="tit1">
                问答
            </h3>
        </div>
        <div class="p15 bd-gray ask">
            <!--加载列表-->
            {{house_global.ask_list({
                list: block_wenda,
                tips: detail.name ~ '问答'
            })}}
            <!--/加载列表-->
            <div class="blank20"></div>
            <!--page-->
            {{core_global.page(block_wenda)}}
            <!--page-->
            <div class="blank10"></div>
        </div>
    </div>
{% endblock d_body %}
