{% extends "HouseBundle::base_show.html.twig" %}
{% block js %}
<script type="text/javascript">
// 二次确认
    seajs.use([], function() {
        var $form = $('.menuform');
        // 增加时才提示
        if (!$form.data('id')) {
            $form.on('before', function() {
                 $.jqModal.confirm({
                     text: '请确认控制器方法是否正确，提交后不能修改，你确定要提交吗？',
                     accept: function() {
                        // 手动提交表单
                        $form.trigger('submitFn');
                     }
                 }, {
                     head: '提示'
                 })
            })
        }
    })  
</script>
{% endblock %}
{% block body %}
{{ core_manage.form(form|default(''),'menuform form') }}
{% endblock %}
