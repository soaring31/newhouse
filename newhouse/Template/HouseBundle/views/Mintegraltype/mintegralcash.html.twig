{% block tableMain %}
{{ core_manage.filter([
    {
        method: 'show',
        title: '<i class="font-ico-plus mr5"></i>新增兑换方案'
    }
    
]) }}
<section class="list-con" data-param="{
        defUrl    : '{{ (action)|U }}',
        showUrl   : '{{ (action ~ '/show')|U }}',
        submitUrl : '{{ (action ~ '/save')|U }}',
        deleteUrl : '{{ (action ~ '/delete')|U }}',
        fixed     : '.filter',
        list      : '.list-con',
        data      : {
            models: '{{ models }}',
            category: '{{ category }}'
        }
    }">
    <div class="list">
        <table class="right-table table-hover">
            <tbody>
                <tr data-id>
                    <th width="40" class="tac">{{core_manage.checkbox()}}</th>
                    <th width="40" data-role="sort" data-sort="id" class="sort">ID</th>
                    <th>来源积分</th>
                    <th >来源积分值</th>
                    <th >兑换积分</th>
                    <th >兑换积分值</th>
                    <th width="120" class="tac">操作</th>
                </tr>
               
                {% if ident.info.data is defined and ident.info.pageCount|default('') != 0 %}
                {% for k, vo in ident.info.data %}
                    {# {{dump(vo)}} #}
                <tr data-id="{{ vo.id }}">
                    <td class="tac">{{core_manage.checkbox()}}</td>
                    <td>{{ vo.id }}</td>
                   <td>{{('house.integral')|getOne('name', {id: vo.sid})}}</td>
                   <td><span data-role="itemEdit" data-name="scurrency" class="edit">{{ vo.scurrency}}</span></td>
                  <td>{{('house.integral')|getOne('name', {id: vo.eid})}}</td>
                    <td><span data-role="itemEdit" data-name="ecurrency" class="edit">{{ vo.ecurrency }}</span></td>
                    <td class="tar pr10">
                        {{ core_manage.show({
                          
                        }) }}
                        {{ core_manage.delete() }}
                    </td>
                </tr>
                {% endfor %}
                {% else %}
                <tr><td colspan="7" class="tac">没有数据！</td></tr>
                {% endif %}
            </tbody>
        </table>
    </div>
    {{core_manage.page(ident.info)}}
</section>

