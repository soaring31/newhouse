{# Core/Resources/views/layout.html.twig #}
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
{% block html_tag %}
<html lang="{{ app.request.locale }}">
{% endblock html_tag %}
	<head>
        <meta charset="{{ _charset }}" />
        <meta name="robots" content="noindex,nofollow" />
        {# 启用极速模式 #}
        <meta name="renderer" content="webkit">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

        <title>{{product}}{% block title %}{% endblock %}</title>
        {% block key_des %}
        <meta name="keywords" content="{{ keyword }}" />
        <meta name="description" content="{{ content }}" />
        {% endblock %}
        <link rel="icon" sizes="16x16" href="{{ asset('favicon.ico', absolute=true) }}" />
		<script>
			var csrf_token	= "{{csrf_token}}";
        	var jsbase  = "{{ asset('bundles') }}";
        	var baseUrl = "{{ app.request.getBaseUrl() }}";
        	window.UEDITOR_HOME_URL = "{{ asset('bundles') }}/core/js/vendor/ueditor/";
        </script>
        <link rel="stylesheet" href="{{ asset('bundles/'~bundlepath~'/css/ats.css', absolute=true) }}" />
        {% block css %}{% endblock %}
        {% block viewcss %}{% endblock %}
        <script type="text/javascript" src="{{ asset(corepath~'/js/vendor/sea.main.js') }}"></script>
        <script type="text/javascript" src="{{ asset(corepath~'/js/seajs.cfg.js', absolute=true) }}"></script>
        {% block js %}{% endblock %}
    </head>
	<body>
    {% block header %}{% endblock %}
	{% block body %}{% endblock %}
	{% block footer %}
    {# <div class="footer">Copyright @{{company}} All rights reserved.</div> #}
    {% endblock %}
  
	</body>
</html>