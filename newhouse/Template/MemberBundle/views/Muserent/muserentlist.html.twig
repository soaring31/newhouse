<section class="list-con" data-param="{
        defUrl    : '{{ (action)|U }}',
        showUrl   : '{{ (action ~ '/show')|U }}',
        submitUrl : '{{ (action ~ '/save')|U }}',
        deleteUrl : '{{ (action ~ '/delete')|U }}',
        fixed     : '.filter',
        list      : '.list-con',
        data      : {
            models: '{{ models }}',
        }
    }">
    <div class="list">
        <table class="right-table table-hover esp-table ">
            <tbody>
                <tr data-id>
                    <th width="40" class="tac">{{core_manage.checkbox()}}</th>                  
                    <th>房源标题/小区名称<br>其他信息</th>
                    <th width="100">点击<br>预约</th>
                    <th width="100">到期时间<br>物业类型</th>
                    <th width="100" >置顶<br>推荐</th>
                    <th width="100">刷新日期<br>装修程度</th>
                    <th width="100" >价格<br>付款</th>
                    <th width="100" >房源图片</th>
                    <th width="100" >审核<br>上架</th>
                    <th width="120" class="tac">操作</th>
                </tr>
                {% if ident.info.data is defined %}
                {% for k, vo in ident.info.data %}
                <tr data-id="{{ vo.id }}">
                <td width="40" class="tac">{{core_manage.checkbox()}}</td>                  
                <td>[南城]<a href="">{{vo.name}}</a><br>{{vo.lpmc}}<br>{{ core_manage.formField({value: vo.shi, form: 'srv_common', field:'shi'}) }}/{{ core_manage.formField({value: vo.ting, form: 'srv_common', field:'ting'}) }}/{{ core_manage.formField({value: vo.wei, form: 'srv_common', field:'wei'}) }},{{ vo.mj }}㎡,{{core_global.formData({value: vo.cx})}}</td>
                <td width="100">123123<br><a href="#" data-rolo="show">预约</a></td>
                <td width="100">{{ vo.zjdate|default('0')|date('Y-m-d') }}<br>{{core_global.formData({value: vo.czlx})}}</td>
                <td width="100" >{{core_global.formData({value: vo.top})}}<br>{{ core_manage.formField({value: vo.jian, form: 'rent', field:'jian'}) }}</td>
                <td width="100">刷新日期<br>{{core_global.formData({value: vo.zxcd})}}</td>
                <td width="100" >{{vo.zj}}元<br>{{ core_manage.formField({value: vo.fkfs, form: 'rent', field:'fkfs'}) }}
                </td>
                <td width="100" >房源图片</td>
                <td width="100" >{{ core_manage.formField({value: vo.checked}) }}<br>{{ core_manage.formField({value: vo.valid, form: 'usesale', field:'valid'}) }}</td>
                <td width="120" class="tac">
                    {{ core_manage.show() }}
                    {{ core_manage.delete() }}
                </td>
                </tr>
                {% endfor %}
                {% else %}
                <tr><td colspan="10" class="tac">没有数据！</td></tr>
                {% endif %}
            </tbody>
        </table>
    </div>
    {{core_manage.page(ident.info)}}
</section>

