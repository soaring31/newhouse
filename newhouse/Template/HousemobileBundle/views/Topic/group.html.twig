{% extends app.request.get('ajax') ? 'HousemobileBundle:Clist:topiclist.html.twig' : 'HousemobileBundle::list_layout.html.twig' %}
{# 说明 
 * search_action: 搜索链接配置
 * url_category: url传递的category值
 * category: 当前分类数据
#}

{% set search_action = ('topic/list')|UU %}

{% set url_category = app.request.get("category", 82) %}

{% set category = ('house.category')|getRow({id: url_category, checked: 1}) %}

{% block key_des %}
    <meta name="keywords" content="{{ category.keywords|default('') }}" />
    <meta name="description" content="{{ category.description|default('') }}" />
{% endblock key_des%}

{% block title %}
    看房团_{{cur_area_data|default('')}}看房团报名
{% endblock title %}

{% block header_search %}
{{ core_mobile_global.bar_nav_btn({
    title: '搜索',
    icon: 'font-f-8',
    popup: {
        title: '看房团搜索',
        popup: '.popup-search',
    }
}) }}
{% endblock header_search %}

{% block header_title %}
    {{core_mobile_global.title({title: category.name|default('看房团')})}}
{% endblock header_title %}


{% block container %}
    {% set list_url = ('topic/group')|U({ajax: 1}) %}
    {{parent()}}
{% endblock container %}

