{% set tpl = app.request.get('tpl', app.request.get('ajax', '')) %}
{% extends 'HousemobileBundle:' ~ tpl|default(':base') ~ '.html.twig' %}
{# 说明 
 * detail: 特价房详情数据
#}

{% set detail = cident.detail.data[0]|default('') %}

{% block title %}
	{{detail.name|default('')}}
{% endblock title %}

{% block header_title %}
	{{core_mobile_global.title({title: '特价房'})}}
{% endblock header_title %}

{% block container %}
	<div data-block="{
	    bParams: true,
	    ajax:{
	        url: '{{ ('special/detail')|U }}',
	        data: {
	            id: '{{ detail.id|default('') }}',
	            tpl: 'Special:detailblock'
	        }
	    }
	}"></div>
{% endblock container %}