{% set tpl = app.request.get('tpl', app.request.get('ajax', '')) %}
{% extends 'HousemobileBundle:' ~ tpl|default(':base') ~ '.html.twig' %}
{# 说明 
 * url_id: url中传递的id
 * detail: 当前数据
#}
{% set url_id = app.request.get("id") %}

{% set detail = ('house.news')|getRow({id: url_id|default(''), checked: 1, findType: 1}) %}

{% block title %}
    {{detail.name|default('置业指南详情')}}
{% endblock title %}

{% block key_des %}
    <meta name="keywords" content="{{detail.keywords|default('置业指南详情')}}" />
    <meta name="description" content="{{detail.abstract|default('置业指南详情')}}" />
{% endblock key_des%}

{% block header_title %}
    {{core_mobile_global.title({title: '置业指南详情'})}}
{% endblock header_title %}

{% block container %}
	<div data-block="{
	    bParams: true,
	    ajax:{
	        url: '{{ ('guide/detail')|U }}',
	        data: {
	            id: '{{ detail.id|default('') }}',
	            tpl: 'Guide:detailblock'
	        }
	    }
	}"></div>
{% endblock container %}
