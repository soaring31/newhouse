{% extends 'HousemobileBundle::base_ajax.html.twig' %}
{# 说明 
 * detail: 当前数据
 * push_clsptj: 推荐视频
#}
{% set detail = detail|default(cident.detail.data[0]|default('')) %}

{% set push_clsptj = ('clsptj')|getPush(15) %} 

{% block result %}
<div class="content">
    <!-- Slider -->
    <div id="video" class="video">
        {% if detail.upvideo|default('') is not empty %}
            {{core_global.video({url: detail.upvideo|default(''), swf: "" ~ asset(corepath ~ '/js/ckplayer/ckplayer.swf') ~ "", height: 'auto'})}}
        {% elseif detail.code|default('') %}
            {{detail.code|default('')|raw}}
        {% else %}
            <img width="100%" height="auto" style="height: auto; width: 100%;" src="{{assetImg('bundles/house/images/pp_sptu.gif')}}" alt="" />
        {% endif %}
    </div>
    {{housemobile_global.content({title: '视频内容', content: detail.content|default(''), default: '暂无说明'})}}
    {# 推荐视频 #}
    <div class="list-block panel-block media-list s-list">
        {{housemobile_global.panel_title({title: '推荐视频'})}}
        <ul id="tjsp" class="list-container list-con">
            {% if push_clsptj is defined %}
                {% for item in push_clsptj %}
                    <li>
                        <a href="{{item.url|UU|default('#')}}" title="{{item.name|default('')}}" class="item-content external">
                            <div class="item-media">
                                {{core_global.img({
                                    src: item.thumb|default(''),
                                    alt: item.name|default(''),
                                    type: 2,
                                    width: 100,
                                    height:67 ,
                                })}}
                            </div>
                            <div class="item-inner">
                                <div class="item-title-row">
                                    <div class="item-title item-title-ex color-6">
                                      {{core_global.substr(item.name|default(''), 20, 1)}}
                                    </div>
                                </div>
                                <div class="item-subtitle item-subtitle-ex mt-20">
                                     更新：{{item.update_time|date("Y-m-d")}}
                                </div>
                                
                            </div>
                        </a>
                    </li>
                {% endfor %}
            {% endif %}
        </ul>
        {{- core_mobile_global.more_con({id: 'tjsp'})-}}
    </div>
    {{ render(controller('HouseBundle:Common:footer', {_isApp: url_isApp})) }}
</div>
<script type="text/javascript">
  seajs.use([''], function () {
    $('#video iframe').eq(0).attr({'height': 'auto', width: '100%'})
  })
</script>
{% endblock result %}