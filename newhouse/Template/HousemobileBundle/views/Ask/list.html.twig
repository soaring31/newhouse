{% extends app.request.get('ajax') ? 'HousemobileBundle:Clist:asklist.html.twig' : 'HousemobileBundle::list_layout.html.twig' %}
{# 说明 
 * search_action: 搜索链接配置
 * url_category: 获取url传过来的值
 * category: 当前分类数据
#}
{% set search_action = ('ask/list')|UU({}, true) %}

{% set url_category = app.request.get("category", 38) %}

{% set category = ('house.category')|getRow({checked: 1, id: url_category|default('')}) %}

{% block title %}
    {{category.name|default('问答')}}
{% endblock title %}


{% block key_des %}
    <meta name="keywords" content="{{category.keywords|default('')}}" />
    <meta name="description" content="{{category.description|default('')}}" />
{% endblock key_des%}

{% block header_title %}
    {{core_mobile_global.title({title: category.name|default('问答')})}}
{% endblock header_title %}

{# 头部右边追加 #}
{% block header_right %}
    {{ core_mobile_global.bar_nav_btn({
        title: '搜索',
        icon: 'font-f-8',
        popup: {
            title: '问答搜索',
            popup: '.popup-search',
        }
    }) }}
{% endblock header_right %}


{% block container %}
    {% set list_header %}
        <div class="filter" data-block="{
            ajax: {
                url: '{{ ('bundlebindforms/ajax')|U }}',
                data: {
                    tpl: 'Common:filter',
                    tag: 'web_ask'
                }
            }
        }"></div>
    {% endset %}
    <div class="blank10"></div>
    {% set list_url = ('ask/list')|U({ajax: 1}) %}
    {{parent()}}
{% endblock container %}

