{% block tableMain %}
{{ core_manage.filter([
    {
        method: 'search',
        field: 'name',
        title:'请搜索答案关键字'
    }
]) }}
<section class="list-con" data-param="{
        defUrl    : '{{ (action)|U }}',
        showUrl   : '{{ (action ~ '/show')|U }}',
        submitUrl : '{{ (action ~ '/save')|U }}',
        deleteUrl : '{{ ('manswermanage/delete')|U }}',
        fixed     : '.filter',
        list      : '.list-con',
        data      : {
            models: '{{ models }}',
            category: '{{ category }}'
        }
    }">
    <div class="list">
        <table class="right-table table-hover">
            <tbody>
                <tr data-id>
                    <th width="40" class="tac">{{core_manage.checkbox()}}</th>
                    <th >问答名称</th>
                    <th width="480">答案</th>
                    <th width="100" class="tac">审核</th>
                    {# <th width="100">悬赏分</th> #}
                    
                    <th width="60">是否最佳</th>
                    <th width="60">点击</th>
                    <th width="100" data-role="sort" data-sort="create_time" class="sort">添加时间</th>
                </tr>
                {% if ident.info.data is defined and ident.info.pageCount|default('') != 0 %}
                {% for k, vo in ident.info.data %}
                    {# {{dump(vo)}} #}
                <tr data-id="{{ vo.id }}">
                    <td class="tac">{{core_manage.checkbox()}}</td>

                    <td class="tov" title="{{ vo.name|default('') }}"><a href="{{ 'ask/detail'|U({id: vo.id}) }}" target="_blank">{{ ('house.ask')|getOne('name', { id: vo.ask})}} </a></td> 
                    <td class="tov">{{ vo.content}}</td>
                    <td class="tac">{{ core_global.formField({value: vo.checked}) }}</td>
                    <td>{{ core_global.formField({value: vo.isanswer, form: 'answer', field:'isanswer'}) }}</td>
                    <td>{{ ('house.ask')|getOne('clicks',{ id: vo.ask}) }}</td>
                    <td>{{ vo.create_time|default('0')|date('Y-m-d') }}</td>
                </tr>
                {% endfor %}
                {% else %}
                <tr><td colspan="10" class="tac">没有数据！</td></tr>
                {% endif %}
            </tbody>
        </table>
    </div>
    {{core_manage.page(ident.info)}}
</section>

{{ core_manage.oprate([
    {
        method: 'delete',
        title: ' <i class="font-ico-del mr5"></i>批量删除',
    }
]) }}
{% endblock %}

