
{% extends 'HouseBundle::base_manage_block.html.twig' %}
{% block js %}
<script type="text/javascript">
    
</script>
{% endblock %}

{% block tableMain %}
    {# {{dump(ident.info.data)}} #}
    {{ core_manage.filter([
        {
            method: 'show',
            title: '<i class="font-ico-plus mr5"></i>新增提问'
        },
        {
            method: 'selectFormField',
            title: '审核',
            form: 'checked',
            field: 'checked',
        },
        {
            method: 'selectFormField',
            title: '提问类型',
            form: 'webtw',
            field: 'twlx',
        },
        {
            method: 'search',
            field: 'name',
            title: '请搜索ID/标题/内容'
        }
    ]) }}
    {# {{dump(ident.info)}} #}
    <section class="list-con" data-param="{
            defUrl    : '{{ (action)|U }}',
            showUrl   : '{{ (action ~ "/show")|U }}',
            submitUrl : '{{ (action ~ "/save")|U }}',
            deleteUrl : '{{ (action ~ "/delete")|U }}',
            fixed     : '.filter',
            list      : '.list-con',
            data      : {
            }
        }">
        <div class="list">
            <table class="right-table table-hover">
                <tbody>
                    <tr data-id>
                        <th width="40" class="tac">{{core_manage.checkbox()}}</th>
                        <th width="40" data-role="sort" data-sort="id" class="sort">ID</th>
                        <th width="100">标题</th>
                        <th>内容</th>
                        <th width="100">提问类型</th>
                        <th width="100">回复</th>
                        <th width="100">审核</th>
                        <th width="100" data-role="sort" data-sort="create_time" class="sort">添加时间</th>
                        <th width="120" class="tac">操作</th>
                    </tr>
                    {% if ident.info.data is defined and ident.info.pageCount|default(0) != 0 %}
                    {% for k, vo in ident.info.data %}
                    <tr data-id="{{ vo.id }}">
                        <td class="tac">{{core_manage.checkbox()}}</td>
                        <td>{{ vo.id }}</td>
                        <td class="tov" title="{{ vo.name|default('') }}"><span data-role="itemEdit" data-name="name" class="edit">{{ vo.name }}</span></td>
                        <td>{{ vo.content }}</td>
                        <td>{{ core_global.formField({value: vo.twlx, form: 'webtw', field:'twlx'}) }}</td>
                        <td><a data-role="show" title="{{vo.name}}的回复" href="{{('mwebtw/mreplymanage')|U({toid: vo.id})}}">[{{ core_global.count({ models: 'webtw', sql_opt: {checked: 1, toid: vo.id} }) }}]</a></td>
                        <td>{{ core_global.formField({value: vo.checked}) }} </td>
                        <td>{{ vo.create_time|default('0')|date('Y-m-d') }}</td>
                        <td class="tar pr10">
                            {{ core_manage.show() }}
                            {{ core_manage.delete() }}
                        </td>
                    </tr>
                    {% endfor %}
                    {% else %}
                    <tr><td colspan="10" class="tac">没有数据！</td></tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
        {{core_manage.page(ident.info)}}
    </section>
    {{ core_manage.oprate([
        {
            method: 'delete',
            title: '<i class="font-ico-del mr5"></i>批量删除',
        },
        {
            method: 'dropdownFormField',
            field: 'checked',
            form: 'checked',
            title: '审核',
        },
        {
            method: 'dropdownFormField',
            title: '提问类型',
            form: 'webtw',
            field: 'twlx',
        }
]) }}
{% endblock %}


