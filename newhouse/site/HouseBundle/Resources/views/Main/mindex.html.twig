{% import "CoreBundle:Macro:global.html.twig" as core_global %}
{# 当前时间 #}
{% set now_time = ('now')|date('U') %}
{# 当天凌晨 #}
{% set day_time = ('now')|date('Y-m-d')|date('U') %}
<div class="mindex pb5">
<div class="m-wrap" data-target="[data-content='1']">
    <div class="info-head">
        <div class="in-h-box ">
            <div class="in-h-box-w cl-1">
                <div class="in-h-box-title">
                    <h2>
                        <a href="{{core_global.menu_url(138)}}">新房</a>
                    </h2>
                    <span>{{core_global.count({models: 'houses'})}}条</span>
                </div>
                <div class="in-h-box-text">
                    <p>今天更新<span>{{core_global.count({models: 'houses', sql_opt: {create_time: 'gte|' ~ day_time }})}}条</span></p>
                    <p>已审<span>{{core_global.count({models: 'houses', sql_opt: {checked: 1}})}}条</span></p>
                    <p>未审<span>{{core_global.count({models: 'houses', sql_opt: {checked: 0} })}}条</span></p>
                </div>
            </div>
            
        </div>

        <div class="in-h-box ">
            <div class="in-h-box-w cl-2">
                <div class="in-h-box-title">
                    <h2>
                        <a href="{{core_global.menu_url(280)}}">二手房</a>
                    </h2>
                    <span>{{core_global.count({models: 'sale'})}}条</span>
                </div>
                <div class="in-h-box-text">
                    <p>今天更新<span>{{core_global.count({models: 'sale', sql_opt: {create_time: 'gte|' ~ day_time }})}}条</span></p>
                    <p>上架<span>{{core_global.count({models: 'sale', sql_opt: {valid: 'gt|' ~ now_time|default('')}})}}条</span></p>
                    <p>已下架<span>{{core_global.count({models: 'sale', sql_opt: {valid: 'between|0,' ~ now_time|default('')}})}}条</span></p>
                </div>   
            </div>
        </div>

         <div class="in-h-box ">
            <div class="in-h-box-w cl-3">
                <div class="in-h-box-title">
                    <h2>
                        <a href="{{core_global.menu_url(285)}}">出租房</a>
                    </h2>
                    <span>{{core_global.count({models: 'rent'})}}条</span>
                </div>
                <div class="in-h-box-text">
                    <p>今天更新<span>{{core_global.count({models: 'rent', sql_opt: {create_time: 'gte|' ~ 'now'|date('Y-m-d')|date('U') }})}}条</span></p>
                    <p>上架<span>{{core_global.count({models: 'rent', sql_opt: {valid: 'gt|' ~ now_time|default('')}})}}条</span></p>
                    <p>已下架<span>{{core_global.count({models: 'rent', sql_opt: {valid: 'between|0,' ~ now_time|default('')}})}}条</span></p>
                </div>   
            </div>
            
        </div>

         <div class="in-h-box ">
            <div class="in-h-box-w cl-4">
                <div class="in-h-box-title">
                    <h2>会员</h2>
                    <span>{{core_global.count({models: 'users', service: 'db' })}}人</span>
                </div>
                <div class="in-h-box-text">
                    <p>今天新注册<span>{{core_global.count({models: 'users', service: 'db', sql_opt: {create_time: 'gte|' ~ day_time } })}}人</span></p>
                    <p>今天登陆<span>{{core_global.count({models: 'users', service: 'db', sql_opt: {logintime: 'gte|' ~ day_time } })}}人</span></p>
                    <p>一个月内登陆<span>{{core_global.count({models: 'users', service: 'db', sql_opt: {logintime: 'gte|' ~ (day_time - 60 * 60 * 24 * 30 ) } })}}人</span></p>
                </div>   
            </div>  
        </div>
    </div>
    <div class="info-middle">
        <div class="in-m-box same-box">
            <div class="info-same">
                <div class="same-title">
                    <h2>基本信息</h2>
                    {# <a href="#" target="_blank"><i class="font-mindex-1 ico"></i></a> #}
                </div> 
                <div class="in-m-box-text">
                    {% set user = ('db.users')|getRow({ id: app.user.id|default() }) %}
                    <p>
                        你的管理级别：{{app.user.rolename|default('')}}
                    </p>
                    <p>
                        {% set mconfig_siteopenreg = core_global.mconfigtostring({name: 'siteopenreg', ename: 'mvisit'}) %}
                        开启会员注册：{{ core_global.formField({value: mconfig_siteopenreg, form: 'mvisit', field: 'siteopenreg'}) }}
                    </p>
                    <p>
                        主域名：{{'maindomain'|C}}
                    </p>
                    <p>
                        当前访问IP：{{ user.loginip|default('') }}
                    </p>
                    <p>
                        当前版本：{{version|default('')}}
                    </p>
                    <p>
                        服务器当前时间：{{'now'|date('Y-m-d H:m:s')}}
                    </p>
                     <p>
                         当前版本：
                        {% if ismulticity == true %}
                            多城市版
                        {% else %}
                            单城市版
                        {% endif %}
                    </p>
