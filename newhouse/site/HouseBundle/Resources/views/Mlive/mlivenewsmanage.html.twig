
{% extends 'HouseBundle::base_manage_block.html.twig' %}
{% set models = app.request.get('models') %}
{% set category = app.request.get('category') %}
{% set topic = app.request.get('topic') %} 
{% block js %}
<script type="text/javascript">
    
</script>
{% endblock %}

{% block mainMenu %}
    {{ parent() }} 
{% endblock %}


{% block tableMain %}
{% set filter_opt = [
    {
        method: 'selectFormField',
        title: '审核',
        form: 'checked',
        field: 'checked',
    },
    {
        method: 'selectFilter',
        attr: {
            'data-selectdate': {
                unix: 1
            }
        },
        data: [
            {
                id: '1M',
                name: '一个月前'
            },
            {
                id: '3M',
                name: '三个月前'
            }
        ],
        field: 'create_time',
        title: '添加时间'
    },
    {
        method: 'search',
        field: 'name',
        title:'请搜索发言人/名称'
    }
] %}
{% if topic %}
{% set filter_opt = [
    {
        method: 'show',
        title: '<i class="font-ico-plus mr5"></i>新增信息',
        url: (action ~ '/show')|U({topic: topic}),
    }
]|merge(filter_opt) %}
{% endif %}    
{{ core_manage.filter(filter_opt) }}
<section class="list-con" data-param="{
        defUrl    : '{{ (action)|U }}',
        showUrl   : '{{ (action ~ '/show')|U }}',
        submitUrl : '{{ (action ~ '/save')|U }}',
        deleteUrl : '{{ (action ~ '/delete')|U }}',
        fixed     : '.filter',
        list      : '.list-con',
        data      : {
           models: '{{ models }}',
            category: '{{ category }}',
            topic: '{{ topic }}',
        }
    }">
    <div class="list">
        <table class="right-table table-hover">
            <tbody>
                <tr data-id>
                    <th width="40" class="tac">{{core_manage.checkbox()}}</th>
                    <th width="40" data-role="sort" data-sort="id" class="sort">ID</th>
                    <th width="200">名称</th>
                    {% if topic|default('') is empty %}
                    <th>直播名称</th>
                    {% endif %}
                    <th width="100">发言人</th>
                    <th width="100">审核</th>
                    <th width="100" data-role="sort" data-sort="create_time" class="sort">添加时间</th>
                    <th width="120" class="tac">操作</th>
                </tr>
                {% if ident.info.data is defined and ident.info.pageCount|default('') != 0 %}
                {% for k, vo in ident.info.data %}
                    {# {{dump(vo)}} #}
                <tr data-id="{{ vo.id }}">
                    <td class="tac">{{core_manage.checkbox()}}</td>
                    <td>{{ vo.id }}</td>
                    <td class="tov" title="{{ vo.name|default('') }}"><a href="{{ 'news/detail'|U({id: vo.id}) }}" target="_blank">{{ vo.name }}</a></td>
                    {% if topic|default('') is empty %}
                    <td>
                        {{ ('house.topic')|getOne('name', {id: vo.topic}) }}
                    </td> 
                    {% endif %} 
                    <td>{{ vo.username }}</td>
                    <td>{{ core_global.formField({value: vo.checked}) }} </td>
                    <td>{{ vo.create_time|default('0')|date('Y-m-d') }}</td>
                    <td class="tar pr10">
                        {{ core_manage.show() }}
                        {{ core_manage.delete() }}
                    </td>
                </tr>
                {% endfor %}
                {% else %}
                <tr><td colspan="10" class="tac">没有数据！</td></tr>
                {% endif %}
            </tbody>
        </table>
    </div>
    {{core_manage.page(ident.info)}}
</section>

{{ core_manage.oprate([
    {
        method: 'delete',
        title: ' <i class="font-ico-del mr5"></i>批量删除',
    },
    {
        method: 'dropdownFormField',
        field: 'checked',
        form: 'checked',
        title: '审核',
    }
]) }}
{% endblock %}

