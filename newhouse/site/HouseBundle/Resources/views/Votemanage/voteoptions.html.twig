{% extends 'HouseBundle::base_manage_block.html.twig' %}
{% set models = app.request.get('models') %}
{% set category = app.request.get('category') %}
{% set vid = app.request.get('vid') %}

{% block js %}
<script type="text/javascript"></script>
{% endblock %}

{% block mainMenu %}
    {# {{ parent() }} #}
{% endblock %}

{% block tableMain %}
{% set filterOpt = [
    {
        method: 'selectFormField',
        title: '审核',
        form: 'checked',
        field: 'checked',
    },
    {
        method: 'search',
        field: 'name',
        title:'请搜索选项'
    }
] %}

{% if vid %}
    {% set filterOpt = [{
        method: 'show',
        title: ' <i class="font-ico-plus mr5"></i>新增选项'
    }]|merge(filterOpt) %}
{% endif %}

{{ core_manage.filter(filterOpt) }}
<section class="list-con"  data-param="{
        defUrl    : '{{ (action)|U }}',
        showUrl   : '{{ (action ~ "/show")|U }}',
        submitUrl : '{{ (action ~ "/save")|U }}',
        deleteUrl : '{{ (action ~ "/delete")|U }}',
        fixed     : '.filter',
        list      : '.list-con',
        data      : {
            models: '{{ models }}',
            vid: '{{ vid }}',
            category: '{{ category }}'
        }
    }">
    {# {{ dump(ident.info.data) }} #}
    <div class="list">
        <table class="right-table table-hover">
            <tbody>
                <tr data-id>
                    <th width="50" class="tac">{{core_manage.checkbox()}}</th>
                    <th width="50" data-role="sort" data-sort="id" class="sort">ID</th>
                    <th>投票选项</th>
                    <th width="50"  data-sort="vote" class="sort">票数</th>
                    <th width="50">审核</th>
                    <th width="100" data-role="sort" data-sort="create_time" class="sort">添加时间</th>
                    <th width="120" class="tac">操作</th>
                </tr>
                {% if ident.info.data is defined and ident.info.data|length != 0 %}
                {% for item in ident.info.data %}
                <tr data-id="{{ item.id }}">
                    <td class="tac">{{core_manage.checkbox()}}</td>
                    <td>{{ item.id|default('') }}</td>
                    <td class="tov" title="{{ item.name|default('') }}">{{ item.name|default('') }}</td>
                    <td title="{{ item.votes|default('') }}">{{item.votes|default('')}}</td>
                    <td>{{ core_global.formField({value: item.checked|default('')}) }}</td>
                    <td>{{ item.create_time|default('0')|date('Y-m-d') }}</td>
                    <td class="tar pr10">
                        {{ core_manage.show({
                                url: (action ~ "/show")|U({id: item.id})
                            }) }}
                            {{ core_manage.delete() }}
                    </td>
                </tr>
                {% endfor %}
                {% else %}
                <tr>
                    <td colspan="7" class="tac">没有数据！</td>
                </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
    {{core_manage.page(ident.info)}}
</section>
{{ core_manage.oprate([
    {
        method: 'delete',
        title: ' <i class="font-ico-del mr5"></i>批量删除',
    },
    {
        method: 'dropdownFormField',
        field: 'checked',
        form: 'checked',
        title: '审核',
    }
]) }}
{% endblock %}

{% block promptUl %}
{% endblock %}