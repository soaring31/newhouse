{% extends 'HouseBundle:Mwxconfig:mwxmanage.html.twig' %}
{% block tableMain %}
{{ core_manage.filter([
    {
        method: 'show',
        title: '<i class="font-ico-plus mr5"></i>新增'
    },
    {
        method: 'search',
        field: 'name',
        title: '请搜索名称',
    }
]) }}

<section class="list-con" data-param="{
        defUrl    : '{{ (action)|U }}',
        showUrl   : '{{ (action ~ '/show')|U }}',
        submitUrl : '{{ (action ~ '/save')|U }}',
        deleteUrl : '{{ (action ~ '/delete')|U }}',
        fixed     : '.filter',
        list      : '.list-con',
        data      : {
            models: '{{ models }}',
            category: '{{ category }}'
        }
    }">
    <div class="list">
        <table class="right-table table-hover">
            <tbody>
                <tr data-id>
                    <th width="40" class="tac">{{core_manage.checkbox()}}</th>
                    <th width="60" data-role="sort" data-sort="id" class="sort">ID</th>
                    <th>微信菜单方案</th>
                    <th width="180" class="tac">操作</th>   
                </tr>
                {% if ident.info.data is defined and ident.info.pageCount|default('') != 0 %}
                {% for k, vo in ident.info.data %}
                    {# {{dump(vo)}} #}
                <tr data-id="{{ vo.id }}">
                    <td class="tac">{{core_manage.checkbox()}}</td>
                    <td>{{ vo.id }}</td>
                    <td>{{ vo.name }}</td>
                    <td class="tac">
                        {{ core_manage.show }}
                        {{ core_manage.show(
                         {
                             title: '菜单',
                             url: (controller ~ '/mwxplanmenus')|U({id: vo.id})
                         }
                         ) }}
                        {{ core_manage.delete}}

                    </td>
                    </td>
                </tr>
                {% endfor %}
                {% else %}
                <tr><td colspan="4" class="tac">没有数据！</td></tr>
                {% endif %}
            </tbody>
        </table>
    </div>
    {{core_manage.page(ident.info)}}
    {# {{dump(('checked')|getFormField('checked'))}} #}
</section>

{{ core_manage.oprate([
    {
        method: 'delete',
        title: ' <i class="font-ico-del mr5"></i>批量删除',
    }
    
    
]) }}
{% endblock %}    
