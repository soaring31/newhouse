<section class="list-con" data-param="{
        defUrl    : '{{ (action)|U }}',
        showUrl   : '{{ (action ~ '/show')|U }}',
        submitUrl : '{{ (action ~ '/save')|U }}',
        deleteUrl : '{{ (action ~ '/delete')|U }}',
        fixed     : '.filter',
        list      : '.list-con',
        data      : {
            models: '{{ models }}',
            category: '{{ category }}'
        }
    }">
    <div class="list">
        <table class="right-table table-hover">
            <tbody>
                <tr data-id>
                    <th width="40" class="tac">{{core_manage.checkbox()}}</th>
                    <th>留言者</th>
                    <th>审核</th>
                    {# <th>状态</th> #}
                    {# <th>留言时间</th> #}
                    <th>留言内容</th>
                    <th>回复</th>
                    <th width="120" class="tac">操作</th>
                </tr>
                {% if ident.info.data is defined and ident.info.pageCount|default('') != 0 %}
                {% for k, vo in ident.info.data %}
                    {# {{dump(vo)}} #}
                <tr data-id="{{ vo.id }}">
                    <td class="tac">{{core_manage.checkbox()}}</td>
                    <td> {% if vo.uid %}
                        {{ ('db.users')|getOne('username', {id: vo.uid}) }}
                    {% else %}
                        游客
                    {% endif %}</td>
                    <td>{{ core_global.formField({value: vo.checked}) }} </td>
                    {# <td>
                        {{ core_global.formField({
                            value: vo.messages,
                            form: [
                                {id: 0, name: '未读'},
                                {id: 1, name: '已读'},
                            ],
                            field: 'messages',
                        }) }}
                    </td> #}
                    <td>
                        {{ vo.content }}
                    </td>
                    <td><a href="{{('musermsg/musermsgreply')|U({ toid: vo.id })}}"  title="回复" data-role="show">[{{core_global.count({models: 'usermsg', sql_opt: {toid: vo.id|default('')}})}}]</a></td>
                    <td class="tac">
                        {# {{ core_manage.show() }} #}
                        {{ core_manage.delete() }}
                    </td>
                </tr>
                {% endfor %}
                {% else %}
                <tr><td colspan="10" class="tac">没有数据！</td></tr>
                {% endif %}
            </tbody>
        </table>
    </div>
    {{core_manage.page(ident.info)}}
</section>

