{% extends 'HouseBundle:Houses:lp_list_layout.html.twig' %}

{% block title %}{{cur_area_data|default('')}}购房团购_{{cur_area_data|default('')}}楼盘团购_{{cur_area_data|default('')}}买房团购{% endblock title %}

{% block key_des %}
<meta name="keywords" content="{{cur_area_data|default('')}}{{core_global.mconfig({name: 'hostname', ename: 'mwebset'})}}购房团购,{{cur_area_data|default('')}}{{core_global.mconfig({name: 'hostname', ename: 'mwebset'})}}买房团购,{{cur_area_data|default('')}}{{core_global.mconfig({name: 'hostname', ename: 'mwebset'})}}楼盘团购">
<meta name="description" content="{{cur_area_data|default('')}}购房团购,{{cur_area_data|default('')}}{{core_global.mconfig({name: 'hostname', ename: 'mwebset'})}}提供热门{{cur_area_data|default('')}}楼盘团购活动，为您提供优惠房产团购，尽享抄底折扣，报名参与{{core_global.mconfig({name: 'hostname', ename: 'mwebset'})}}买房团购可享免费看房！ ">
{% endblock key_des %}

{% block css %}
{{core_global.linkcss('bundles/' ~ bundlepath ~ '/css/tg.css')}}
{% endblock css %}

{# 当前位置 #}
{% block current_houses %}
<span>团购</span>
{% endblock current_houses %}

{% block container %}
    <div class="container">
        <!--body-->
        <div class="tg-body fl">
            {% block tg_body %}
                <ul class="lp-list" data-tag="tuangou">
                    {# {% include 'HouseBundle:Clist:groupbuy_list.html.twig' ignore missing %} #}
                    {{house_global.groupbuy_list({
                        list: ident.list
                    })}}
                </ul>
                {{core_global.page(ident.list)}}
                <div class="blank30"></div>
                {# {{dump(ident)}} #}
            {% endblock tg_body %}
        </div>
        <!--/body-->
        <!--aside-->
        <div class="tg-aside fr">
            {% block tg_aside %}
                <!--panel-->
                <div class="bd-gray panel">
                    <!--title-->
                    <div class="panel-hd">
                        <h3>
                            团购已报名
                        </h3>
                    </div>
                    <!--/title-->
                    <!--body-->
                    <div class="panel-bd">
                        <ul class="bm-list">
                            {% if ident.group_order.data is defined %}
                                {% for item in ident.group_order.data %}
                                    <li class="clearfix">
                                        <div class="time fl">{{item.create_time|date('m-d')}}</div>
                                        <div class="tel fl">
                                            {{core_global.if_dw({value: item.tel|default('')|slice(0, 3), danwei: '*****', default_tips: '-'})}}
                                        </div>
                                        <div class="name fl">
                                            <a href="javascript:;">
                                                {{item.name|default('')}}
                                            </a>
                                        </div>
                                    </li>
                                {% endfor %}
                            {% endif %}
                        </ul>
                    </div>
                    <!--/body-->
                </div><!--/panel-->
                <div class="blank20"></div>
                <div class="blank20"></div>
                <!--panel-->
                <div class="panel bd-gray">
                    <!--title-->
                    <div class="panel-hd">
                        <h3>
                           团购流程介绍
                        </h3>
                    </div>
                    <!--/title-->
                    <!--body-->
                    <div class="tg-lc" data-tag="tuangouliucheng">
                        {# 团购流程最多20步 #}
                        {% set push_tuangouliucheng = ('tuangouliucheng')|getPush(20) %}
                        <ul>
                            {% if push_tuangouliucheng is defined %}
                                {% for item in push_tuangouliucheng %}
                                    <li>
                                        <div class="ico fl"></div>
                                        <dl>
                                            <dt>
                                                <i class="font-number-{{loop.index}}"></i>{{item.name|default('')}}
                                            </dt>
                                            <dd>
                                                 {{item.abstract|default('')|raw}}
                                            </dd>
                                        </dl>
                                    </li>
                                {% endfor %}
                            {% endif %}
                        </ul>
                    </div>
                    <!--/body-->
                </div><!--/panel-->
            {% endblock tg_aside %}
        </div>
    </div>
    <div class="blank20"></div>
{% endblock container %}

{% block js %}
    <script type="text/javascript">
        seajs.use(['formattime'], function (formattime) {})
    </script>
{% endblock js %}
