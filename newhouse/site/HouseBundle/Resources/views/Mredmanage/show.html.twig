{% extends "HouseBundle::base_show.html.twig" %}
{% set url_aid = app.request.get('aid') %}
{% set url = ('majaxaction/xiaoqu')|U({name: url_aid}) %}
{% block js %}
<script type="text/javascript">
	seajs.use(['searchxq'], function(searchxq) {
		{% if app.request.get('_id') %}
			searchxq.addTitle();
		{% elseif url_aid %}
		    searchxq.addTitle({
				url: "{{url}}"
			});
		{% else %}
			// 自动计算面积
			searchxq.division();

			searchxq.search({
				xq: '#lpmc',
				url: '{{("majaxaction/xiaoqu")|U({type: 0})}}',
				autofill: ['name', 'aid']
			});
		{% endif %}
	})		
</script>
{% endblock %}
