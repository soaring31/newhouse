{% extends 'HouseBundle::base_manage_block.html.twig' %}
{% set cate_pushs = app.request.get('cate_pushs', 'tejiafang') %}
{% set form = app.request.get('form', 'houses_bargain') %}

{% block tableMain %} 
   {{ core_manage.filter([{
            method: 'show',
            title: '<i class="font-ico-plus mr5"></i>新增特价房',
        },
        {
            method: 'selectFormField',
            title: '审核',
            form: 'checked',
            field: 'checked',
        },
        {
            method: 'selectCate',
            title: '状态',
            field: 'cate_status',
            service: 'house.category',
        },
        {
            method: 'selectCate',
            title: '装修',
            field: 'zxcd',
            service: 'house.category',
        },
        {
            method: 'search',
            field: 'name',
            title: '请搜索名称/ID/楼盘',
        }
    ]) }}
    <div class="list-con" data-param="{
        defUrl    : '{{ (action)|U }}',
        showUrl   : '{{ (action ~ "/show")|U() }}',
        submitUrl : '{{ (action ~ "/save")|U }}',
        deleteUrl : '{{ (action ~ "/delete")|U }}',
        fixed     : '.filter',
        list      : '.list-con',
        data : {
            cate_pushs: '{{ cate_pushs }}',
            form: '{{form}}'
        }
    }">
        <div class="list">
         <table class="right-table table-hover">
                <tbody>
                    <tr data-id>
                        <th width="40" class="tac">{{core_manage.checkbox()}}</th>
                        <th width="40" data-role="sort" data-sort="id" class="sort">ID</th>
                        <th>名称</th>
                        <th width="150">楼盘名称</th>
                        <th width="100">销售状态</th>
                        <th width="100">装修程度</th>
                        <th width="50">审核</th>
                        <th width="100" data-role="sort" data-sort="create_time" class="sort">添加时间</th>
                        <th width="120" class="tac">操作</th>
                    </tr>
                    {% if ident.info.data|length %}
                    {% for k, vo in ident.info.data %}
                        
                    <tr data-id="{{ vo.id }}">
                        <td class="tac">{{core_manage.checkbox()}}</td>
                        <td>{{ vo.id }}</td>
                        <td class="tov" title="{{ vo.name|default('') }}">
                            <a href="{{ 'special/detail'|U({id: vo.id}) }}" target="_blank">{% if vo.thumb %}<i class="font-ico-tp mr5 fcr"></i>{% endif %}{{ vo.name }}</a>
                        </td>
                        <td width="100">
                            <a href="{{('houses/detail')|U({id: vo.aid})}}" target="_blank">
                                {{ vo.lpmc|default('-') }}
                            </a>
                        </td>
                        <td width="100">
                            {{ core_global.formData({
                                value: vo.cate_status
                            }) }}
                        </td>
                        <td width="100">
                            {{ core_global.formData({
                                value: vo.zxcd
                            }) }}
                        </td>
                        <td>{{ core_global.formField({value: vo.checked}) }}</td>
                        <td>{{ vo.create_time|default('0')|date('Y-m-d') }}</td>
                        <td class="tar pr10">
                            {{ core_manage.show({url: (action ~ "/show")|U({id: vo.id}) }) }}
                            {{ core_manage.delete() }}
                        </td>
                    </tr>
                    {% endfor %}
                    {% else %}
                    <tr><td colspan="9" class="tac">没有数据！</td></tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
            {{core_manage.page(ident.info)}}
    </div>

    {{ core_manage.oprate([
        {
            method: 'delete',
            title: '<i class="font-ico-del mr5"></i>批量删除',
        },
        {
            method: 'dropdownFormField',
            field: 'checked',
            form: 'checked',
            title: '审核',
        },
        {
            method: 'dropdownCate',
            title: '状态',
            field: 'cate_status',
            service: 'house.category',
        }
    ]) }}
{% endblock %}


{% block promptUl %}
提示：新增特价房的时候必须从所属楼盘中关联到搜索的楼盘，否则会提示楼盘id必须填写
{% endblock %}