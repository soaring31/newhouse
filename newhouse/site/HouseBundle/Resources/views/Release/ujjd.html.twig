{% set wids = ('house.entrust')|getOne('wid', { id: app.request.get('id')}) %}

{% if wids %}
    {% set wid = false %}
{% else %}
    {% set wid = true %}
{% endif %}

{% extends wid ? 'HouseBundle::base.html.twig' : 'CoreBundle:Dispatch:errorcontent.html.twig' %}

{% set id = app.request.get('id') %}

{% block title %}经纪人{% endblock title %}
{% block body %}
    {% set models = app.request.get('models') %}
    <div class="container">
        {{house_global.release_nav({
            action: action
        })}}
        <div class="agn-con  view-form " id="itemuid">
            {% if models == 'rent' %}
                {% set durl = 'wthouse' %}
            {% else %}
                {% set durl = 'wtbuy' %}
            {% endif %}
            {% if ident.info.data is defined and ident.info.pageCount|default(0) != 0 %}
                <form jumpurl="{{ ('release/' ~ durl)|U({ models: models }) }}"  action="{{ ('mentrustarc/save')|U({_form_id: 368 }) }}"  class="jqvalidate">
                    <input type="hidden" name="aid" value="{{id}}">
                    <input type="hidden" name="uid"  />
                    {{ form_widget(form.csrf_token) }}
                    {% for item in ident.info.data %}
                        {% set item_user_info = ('db.userinfo')|getRow({uid: item.id|default('')}) %}
                        {% set item_name = item_user_info.nicename|default(item.username|default('')) %}
                        <div class="sale-list-item" >
                            <label>
                                <div class="sale-item-r">
                                    <input type="checkbox" name="item"  value="{{item.id}}" />
                                </div>
                                <div class="sale-item-l">
                                    <a href="{{('member/j_detail')|U({id: item.id|default('')})}}" target="_blank">
                                        {{- core_global.img({
                                            src: item_user_info.image|default(''),
                                            alt: item_name|default(''),
                                            width: 100,
                                            height: 130,
                                            type: 2
                                        }) -}}
                                    </a>
                                    <div class="sale-item-text">
                                        <a href="{{('member/j_detail')|U({id: item.id|default('')})}}" target="_blank" class="shop btn">进入店铺</a>
                                        <h3>
                                            <a class="name" href="{{('member/j_detail')|U({id: item.id|default('')})}}" target="_blank">
                                                {{item_name|default('')}}
                                            </a>
                                            <i class="shou">售</i>
                                            &nbsp;
                                            <span>{{item_user_info.sales|default('0')}}</span>
                                            套
                                            <i class="zu">租</i>
                                            &nbsp;
                                            <span>{{item_user_info.rents|default('0')}}</span>
                                            套
                                        </h3>
                                        <p>
                                            联系电话&nbsp;:&nbsp; <b>{{item.tel|default('')}}</b>
                                        </p>
                                        <p>
                                            服务区域&nbsp;:&nbsp;
                                            <span>{{core_global.region({id: item_user_info.region|default(''), tpl: '%value%'})}}</span>
                                        </p>
                                        <p>
                                            {{ house_global.publisher({
                                                id: item.id|default(''),
                                                jjr_tpl: '所属公司&nbsp;:&nbsp;<a href="' ~ ('member/detail')|U({id: '%jjgs_id%'}) ~ '" target="_blank" class="c-e43">%jjgs_name%</a>'
                                            }) }}
                                        </p>
                                        {{ house_global.publisher({
                                            id: item.id|default(''),
                                            jjr_tpl: '<p class="jjr-list-rz"><span>
                                                %fwdj%%idcard%%license%
                                            </span></p>'
                                        }) }}
                                    </div>
                                </div>
                            </label>
                        </div>
                    {% endfor %}
                    <div class="blank20"></div>
                    <!--page-->
                    {{core_global.page(ident.info)}}
                    <!--page-->
                    <button type="submit" id="submit" name="submit" class="btn btn-jjr-submit font-ico-22" data-role="submit">提交</button>
                </form>
            {% endif %}
        </div>
        <script type="text/javascript">
        seajs.use([], function() {
            $('#itemuid').on('click', 'input[type=checkbox]', function() {
                var strSel = '';
                $('#itemuid').find('input:checked').each(function() {
                    strSel += $(this).val() + ",";
                });
                $('input[name=uid]').val(strSel.substring(0, strSel.length - 1))
                // 当前项高亮
                $(this).closest('.sale-list-item').toggleClass('active');;
            })
        })
        </script>
    </div>
    <div class="blank10"></div>
{% endblock %}

{% block js %}

{% endblock js%}
