{% extends 'HouseBundle::base_manage_block.html.twig' %}
{% block js %}

{% endblock %}

{% block mainMenu %}
    {{ parent() }} 
{% endblock %}

{% block tableMain %}
{{ core_manage.filter([
    {
        method: 'show',
        title: '<i class="font-ico-plus mr5"></i>新增水印方案'
    }
]) }}
<section class="list-con" data-height="580" data-param="{
        defUrl    : '{{ (action)|U }}',
        showUrl   : '{{ (action ~ '/show')|U }}',
        submitUrl : '{{ (action ~ '/save')|U }}',
        deleteUrl : '{{ (action ~ '/delete')|U }}',
        fixed     : '.filter',
        list      : '.list-con',
        data      : {
        }
    }">

    <div class="list">
        <table class="right-table table-hover">
            <tbody>
                <tr data-id>
                    <th class="pl20">方案名称</th>
                    <th width="80" class="tac">标识</th>
                    <th class="w200 tac">水印类型</th>
                    <th class="w200 tac">是否可用</th>
                    <th width="120" class="tac">操作</th>
                </tr>
                {% if info is defined and info|default('') %}
                {% for key,vo in info %}
                <tr data-id="{{ key }}">
                    <td class="pl20">{{ vo.name }}</td>
                    <td class="tac">{{ vo.ename }}</td>
                    <td class="tac">{{ core_global.formField({value: vo.type, form: 'webwatermarkshow', field: 'type'}) }}</td>
                    <td class="tac">{{ core_global.formField({value: vo.status, form: 'webwatermarkshow', field: 'status'}) }}</td>
                    <td class="tac">
                        {{ core_manage.show({url: (action~'/show')|U('id='~key)}) }}
                        {% if vo.issystem|default('') != 1 %}
                            {{ core_manage.delete() }}
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
                {% else %}
                <tr><td colspan="10" class="tac">没有数据！</td></tr>
                {% endif %}
            </tbody>
        </table>
    </div>
    {# {{core_manage.page(ident.info)}} #}
</section>
{% endblock tableMain %}

{% block promptUl %}{% endblock %}