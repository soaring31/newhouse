{% block mainMenu %}
    {{ parent() }}
    {{ core_manage.show({
         url: (action ~ '/initiative')|U({ename:'initiative'}) ,
         title: '主动推送配置',
    }) }}

    {{ core_manage.submit({
        ico: '1',
        url: ('sitemapmanage/pushsitemap')|U ,
