{% block mainleft %}
{% endblock mainleft %}

{% block tableMain %}
{{ core_manage.filter([
    {
        method: 'show',
        title: '<i class="font-ico-plus mr5"></i>新增SiteMap管理'
    },
    {
        method: 'search',
        field: 'name',
    }
]) }}
<section class="list-con" data-param="{
    defUrl    : '{{ (action)|U }}',
    showUrl   : '{{ (action ~ '/show')|U }}',
    submitUrl : '{{ (action ~ '/save')|U }}',
    deleteUrl : '{{ (action ~ '/delete')|U }}',
    fixed     : '.filter',
    list      : '.list-con',
    data      : {
    }
}">
    <div class="list">
        <table class="right-table table-hover">
            <tbody>
                <tr data-id>
                    <th width="40" class="tac">{{core_manage.checkbox()}}</th>
                    <th width="50" data-role="sort" data-sort="id" class="sort">序号</th>
                    <th width="200">任务名称</th>
                    <th width="200">XML文件名称</th>
                    <th>XML文件模版</th>
                    <th width="60">是否启用</th>
                    <th width="250" class="tac">操作</th>
                </tr>
                {% if ident.info.data is defined and ident.info.pageCount|default(0) != 0 %}
                {% for k, vo in ident.info.data %}
                <tr data-id="{{ vo.id }}">
                    <td class="tac">{{core_manage.checkbox()}}</td>
                    <td class="pl10">{{ vo.id|default('') }}</td>
                    <td>{{ vo.cname|default('') }}</td>
                    <td>{{ vo.xml_url|default('') }}</td>
                    <td class="tov">{{ vo.tpl|default('') }}</td>
                    <td class="tc">{{ core_global.formField({value: vo.status, form: 'sitemapmanageshow', field: 'status'}) }}</td>
                    <td class="tar pr10">
                        {{ core_manage.show({
                             url: ('sitemapmanage/create')|U({id: vo.id}) ,
                             title: '生成',
                             'data-ajax': 1
                        }) }}
                        <a href="{{('sitemap/sitemapbind')|U({sitemapid: vo.id})}}" class="btn btn-sm" data-role="show">绑定模型</a>
                        {{ core_manage.show() }}
                        {{ core_manage.delete() }}
                    </td>
                </tr>
                {% endfor %}
                {% else %}
                <tr><td colspan="7" class="tac">没有数据！</td></tr>
                {% endif %}
            </tbody>
        </table>
    </div>
    {{core_manage.page(ident.info)}}
</section>

{{ core_manage.oprate([
    {
        method: 'delete',
        title: ' <i class="font-ico-del mr5"></i>批量删除',
    }
]) }}
{% endblock %}

