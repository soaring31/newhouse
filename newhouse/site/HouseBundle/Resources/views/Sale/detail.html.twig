            <div class="info1 clearfix">
                <div class="i-label">
                    面<span class="t-index2"></span>积:
                </div>
                <div class="i-txt">
                    {{house_global.if_mj({value: detail.mj|default(''),default_tips: '-'})}}
                </div>
                <div class="i-label">
                    朝<span class="t-index2"></span>向:
                </div>

