{% extends 'HouseBundle:Sale:qdetail.html.twig' %}

{% block title %}{{detail.name|default('')}}二手房出售信息-{{detail.name|default('')}}小区网{% endblock title %}

{% block key_des %}
<meta http-equiv="Content-Type" content="text/html; charset=gb2312" />
<meta name="keywords" content="{{detail.name|default('')}}二手房出售信息、{{detail.name|default('')}}二手房、{{detail.name|default('')}}二手房" />
<meta name="description" content="{{detail.name|default('')}}小区网是为{{cur_area_data|default('')}}{{detail.name|default('')}}小区居民服务的网站,{{detail.name|default('')}}二手房出售信息主要为您提供最新、最真实的{{detail.name|default('')}}二手房、{{detail.name|default('')}}二手房出售信息、,每天更新大量优质{{detail.name|default('')}}二手房房源，100%审核。" />
{% endblock key_des %}
{# 导航高亮 #}
{% set nav_houses_act = 2 %}

{% set filter_url_opt = {id: app.request.get('id')} %}

{# 重新排序 #}
{% set sort_data = {
    def: {
        title: '默认'
    },
    mj: {
        title: '面积'
    },
    zj: {
        title: '总价'
    },
    dj: {
        title: '单价'
    },
} %}

{% block header_xiaoqu %}
{% endblock header_xiaoqu %}

{% block body_xiaoqu %}
    <div class="blank15"></div>
    {# 检索数据源 #}
    {% set cate_data = house_global.cate_data({ 
        tag: 'xq_sale',
        url_opt: { 
            id: detail.id
        } 
    }).__toString|json_decode %}
    {# 筛选条件 #}
    {{house_global.filter_cfg({
        show_selected: 1,
        action: action
    }|merge(cate_data))}}
    <div class="blank15"></div>
    <div class="xq-d-body fl">
        <div class="lp-coltit">
            <a href="{{('sale/list')|U}}" class="more" target="_blank">更多&gt;&gt;</a>
            <h3 class="tit1">出售房源</h3>
        </div>
        <div>
            <!--标题-->
            <div class="fy-js p10 clearfix bd-gray">
                <span class="fl" id="mpacount">共有<b class="c-f00">{{houses_sale.pageCount|default('0')}}</b>套房子符合要求</span>
                <div class="sort fr">
                    {% block sort %}
                        {{ core_global.sort({
                            action: action,
                            data: sort_data
                        }|merge(cate_data)) }}
                    {% endblock sort %}
                </div>
                <div class="blank5"></div>
            </div>
            <!--/标题-->
            <!--列表-->
            {% block houses_sale %}
                {{parent()}}
            {% endblock houses_sale %}
            <!--/列表-->
            <!--分页-->
            <div class="blank10"></div>
            <!--page-->
            {{core_global.page(houses_sale)}}
            <!--page-->
            <div class="blank10"></div>
            <!--/分页-->
        </div>
    </div>
{% endblock body_xiaoqu %}

{% block map_xiaoqu %}{% endblock map_xiaoqu %}
